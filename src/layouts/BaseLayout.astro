---
import Footer from "../components/layout/Footer.astro";
import Header from "../components/layout/Header.astro";
import { createSEOMeta } from "../utils/seo";
import SchemaMarkup from "../components/seo/SchemaMarkup.astro";
import SocialProof from "../components/ui/SocialProof.astro";
import PromoModal from "../components/ui/PromoModal.astro";
import "../styles/global.css";

interface Props {
    title: string;
    description?: string;
    canonicalUrl?: string;
    ogImage?: string;
    keywords?: string[];
    noIndex?: boolean;
    showWhatsApp?: boolean;
    showHeader?: boolean;
    showFooter?: boolean;
    showSocialProof?: boolean;
}

const {
    title,
    description,
    canonicalUrl = Astro.url.href,
    ogImage = "/assets/logo.svg",
    keywords = [],
    noIndex = false,
    showWhatsApp = true,
    showHeader = true,
    showFooter = true,
    showSocialProof = false,
} = Astro.props;

const seo = createSEOMeta({
    title,
    description,
    canonicalUrl,
    ogImage,
    keywords,
});
---

<!doctype html>
<html lang="pt-BR">
    <head>
        <!-- Google tag (gtag.js) -->
        <script
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-Z1TRD8DK7P"
        ></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());

            gtag("config", "G-Z1TRD8DK7P");
        </script>

        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/assets/logo.svg" />
        <meta name="generator" content={Astro.generator} />

        <!-- SEO -->
        <title>{seo.title}</title>
        <meta name="description" content={seo.description} />
        <link rel="canonical" href={seo.canonical} />
        <meta name="keywords" content={seo.keywords} />
        <meta name="author" content="Alpha Code" />
        <meta
            name="google-site-verification"
            content="google74f5360f54ab2c1a"
        />

        <!-- Open Graph -->
        <meta property="og:title" content={seo["og:title"]} />
        <meta property="og:description" content={seo["og:description"]} />
        <meta property="og:type" content={seo["og:type"]} />
        <meta property="og:url" content={seo["og:url"]} />
        <meta property="og:image" content={seo["og:image"]} />
        <meta property="og:locale" content={seo["og:locale"]} />

        <!-- Twitter -->
        <meta name="twitter:card" content={seo["twitter:card"]} />
        <meta name="twitter:creator" content={seo["twitter:creator"]} />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700;800&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />

        <meta name="geo.region" content="BR" />
        <meta name="geo.placename" content="Brasil" />

        <SchemaMarkup />

        {noIndex && <meta name="robots" content="noindex, nofollow" />}
        {!noIndex && <meta name="robots" content={seo.robots} />}
    </head>
    <body>
        <a href="#main-content" class="skip-link sr-only focus:not-sr-only">
            Pular para conteúdo principal
        </a>

        {showHeader && <Header />}

        <main id="main-content">
            <slot />
        </main>

        {showFooter && <Footer />}

        {
            showWhatsApp && (
                <a
                    href="https://wa.me/5521999064502"
                    target="_blank"
                    class="whatsapp-float"
                    aria-label="Fale conosco"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        fill="white"
                    >
                        <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z" />
                    </svg>
                </a>
            )
        }

        <!-- Social Proof Popup -->
        {showSocialProof && <SocialProof />}

        <!-- Promotional Modal -->
        <PromoModal />

        <!-- Toast Notification Container -->
        <div id="toast-container" class="toast-container"></div>

        <slot name="scripts" />
        <script>
            import { ScrollTrigger } from "gsap/ScrollTrigger";
            // Globally disable markers just in case
            ScrollTrigger.config({ limitCallbacks: true });

            // Global ShowToast function
            (window as any).showToast = function (
                message: string,
                type: "success" | "error" = "success",
            ) {
                const container = document.getElementById("toast-container");
                if (!container) return;

                const toast = document.createElement("div");
                toast.className = `toast-item ${type}`;
                toast.innerHTML = `
                    <div class="toast-content">
                        ${type === "success" ? "✅" : "❌"}
                        <span>${message}</span>
                    </div>
                `;

                container.appendChild(toast);

                // Auto remove
                setTimeout(() => {
                    toast.classList.add("fade-out");
                    setTimeout(() => toast.remove(), 500);
                }, 3000);
            };
        </script>
    </body>
</html>

<style>
    .skip-link {
        background: var(--color-primary);
        color: white;
        padding: 8px;
        z-index: 9999;
    }
    .whatsapp-float {
        position: fixed;
        bottom: 45px;
        right: 30px;
        background-color: #25d366;
        color: white;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        text-align: center;
        font-size: 30px;
        box-shadow: 2px 2px 3px #999;
        z-index: 100;
        display: flex;
        align-items: center;
        justify-content: center;
        transition:
            transform 0.3s,
            box-shadow 0.3s;
    }
    .whatsapp-float:hover {
        transform: scale(1.1);
        box-shadow: 2px 2px 10px #666;
    }

    /* Toast Styles */
    .toast-container {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 99999;
        display: flex;
        flex-direction: column;
        gap: 15px;
        pointer-events: none;
        width: 100%;
        max-width: 420px;
        align-items: center;
    }

    .toast-item {
        background: #0a0a0a;
        border: 2px solid rgba(255, 255, 255, 0.1);
        color: #ffffff;
        padding: 22px 30px;
        border-radius: 24px;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.9);
        display: flex;
        align-items: center;
        gap: 16px;
        animation: toastPopup 0.5s cubic-bezier(0.18, 0.89, 0.32, 1.28) forwards;
        pointer-events: auto;
        text-align: center;
        width: 90%;
    }

    .toast-item.success {
        border: 2px solid #10b981;
        background: #062016;
    }

    .toast-item.error {
        border: 2px solid #ef4444;
        background: #2d0a0a;
        box-shadow: 0 0 30px rgba(239, 68, 68, 0.2);
    }

    .toast-content {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 16px;
        font-size: 1.15rem;
        font-weight: 700;
        width: 100%;
    }

    @keyframes toastPopup {
        from {
            transform: scale(0.7) translateY(30px);
            opacity: 0;
        }
        to {
            transform: scale(1) translateY(0);
            opacity: 1;
        }
    }

    .toast-item.fade-out {
        opacity: 0;
        transform: scale(0.9);
        transition: 0.4s;
    }
</style>
