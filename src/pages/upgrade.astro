    <script>
        import { gsap } from "gsap";

        const upgradeBtns = document.querySelectorAll(".btn-upgrade");
        const modal = document.getElementById("payment-modal");
        const celebrationOverlay = document.getElementById(
            "celebration-overlay",
        );
        const closeModal = document.querySelector(".close-modal");
        const confirmBtn = document.getElementById(
            "confirm-payment-btn",
        ) as HTMLButtonElement;

        let selectedPlan = "";
        const PLAN_PRICES: any = {
            FREE: 0,
            PRO: 297,
            VIP: 597,
        };

        const currentPlan = (
            document.querySelector(".pricing-card.current .plan-name")
                ?.innerHTML || "FREE"
        ).trim();

        upgradeBtns.forEach((btn) => {
            btn.addEventListener("click", () => {
                selectedPlan = btn.getAttribute("data-plan") || "";
                if (!selectedPlan) return;

                const newPrice = PLAN_PRICES[selectedPlan];
                const oldPrice = PLAN_PRICES[currentPlan] || 0;
                const difference = newPrice - oldPrice;
                const discount = difference * 0.1;
                const total = difference - discount;

                // Update Modal Content
                const modalPlanName =
                    document.getElementById("modal-plan-name");
                const modalFullPrice =
                    document.getElementById("modal-full-price");
                const modalCreditPrice =
                    document.getElementById("modal-credit-price");
                const modalDiscount = document.getElementById("modal-discount");
                const modalTotal = document.getElementById("modal-total");

                if (modalPlanName) modalPlanName.innerText = selectedPlan;
                if (modalFullPrice)
                    modalFullPrice.innerText = `R$ ${newPrice},00`;
                if (modalCreditPrice)
                    modalCreditPrice.innerText = `- R$ ${oldPrice},00`;
                if (modalDiscount)
                    modalDiscount.innerText = `- R$ ${discount.toFixed(2)}`;
                if (modalTotal) modalTotal.innerText = `R$ ${total.toFixed(2)}`;

                modal?.classList.add("active");
            });
        });

        closeModal?.addEventListener("click", () =>
            modal?.classList.remove("active"),
        );

        function startCelebration(plan: string) {
            const planDisplay = document.getElementById("celebration-plan");
            if (planDisplay) planDisplay.innerText = plan;

            celebrationOverlay?.classList.add("active");

            // GSAP Animations
            const tl = gsap.timeline();
            tl.fromTo(
                ".celebration-icon",
                { scale: 0, rotate: -180 },
                { scale: 1, rotate: 0, duration: 1, ease: "back.out(1.7)" },
            )
                .fromTo(
                    ".celebration-title",
                    { y: 30, opacity: 0 },
                    { y: 0, opacity: 1, duration: 0.6 },
                    "-=0.4",
                )
                .fromTo(
                    ".celebration-msg",
                    { opacity: 0 },
                    { opacity: 1, duration: 0.6 },
                )
                .fromTo(
                    ".benefits-reveal",
                    { scale: 0.8, opacity: 0 },
                    { scale: 1, opacity: 1, duration: 0.5, ease: "power2.out" },
                )
                .to(".loading-bar-fill", {
                    width: "100%",
                    duration: 3,
                    ease: "power1.inOut",
                });

            setTimeout(() => {
                window.location.href = "/dashboard";
            }, 4500);
        }

        confirmBtn?.addEventListener("click", async () => {
            confirmBtn.disabled = true;
            confirmBtn.innerText = "Processando Pagamento...";

            try {
                const response = await fetch("/api/user/update", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ plan: selectedPlan }),
                });

                if (response.ok) {
                    modal?.classList.remove("active");
                    startCelebration(selectedPlan);
                } else {
                    const data = await response.json();
                    (window as any).showToast(
                        data.message || "Erro no processamento",
                        "error",
                    );
                    confirmBtn.disabled = false;
                    confirmBtn.innerText = "Confirmar e Pagar";
                }
            } catch (error) {
                (window as any).showToast("Erro de conex√£o", "error");
                confirmBtn.disabled = false;
                confirmBtn.innerText = "Confirmar e Pagar";
            }
        });
    </script>
