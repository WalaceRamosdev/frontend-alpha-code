---
import Layout from "../layouts/BaseLayout.astro";
import { getSession } from "../lib/auth";

let session = null;
try {
    session = await getSession(Astro.request);
} catch (e) {
    console.error("Upgrade Auth Error:", e);
}

if (!session) {
    return Astro.redirect("/login");
}

const currentPlan = session.user?.plan || "FREE";
export const prerender = false;
---

<Layout title="Upgrade de Plano | Alpha Code" showWhatsApp={false}>
    <div class="upgrade-wrapper">
        <div class="ambient-glow"></div>

        <div class="container upgrade-container">
            <header class="upgrade-header">
                <a href="/dashboard" class="back-link">← Voltar ao Dashboard</a>
                <h1 class="glow-text">Eleve seu Projeto ao Próximo Nível</h1>
                <p class="subtitle">
                    Escolha o plano ideal para a escala do seu negócio digital.
                </p>
            </header>

            <div class="pricing-grid">
                <!-- PRO PLAN -->
                <div
                    class={`pricing-card pro ${currentPlan === "PRO" ? "current" : ""}`}
                >
                    {
                        currentPlan === "PRO" && (
                            <div class="current-label">Plano Atual</div>
                        )
                    }
                    <div class="card-header">
                        <span class="plan-name">PRO</span>
                        <div class="price">
                            <span class="currency">R$</span>
                            <span class="amount">297</span>
                            <span class="period">/mês</span>
                        </div>
                    </div>
                    <ul class="features-list">
                        <li>
                            <span class="check">✓</span> Suporte Ouro (12h úteis)
                        </li>
                        <li>
                            <span class="check">✓</span> 20% OFF em Novos Projetos
                        </li>
                        <li>
                            <span class="check">✓</span> Certificado SSL Premium
                        </li>
                        <li>
                            <span class="check">✓</span> Painel de Métricas Avançado
                        </li>
                    </ul>
                    <button
                        class="btn-upgrade pro-btn"
                        data-plan="PRO"
                        disabled={currentPlan === "PRO" ||
                            currentPlan === "VIP"}
                    >
                        {
                            currentPlan === "PRO"
                                ? "Já Ativo"
                                : currentPlan === "VIP"
                                  ? "Incluído no VIP"
                                  : "Fazer Upgrade PRO"
                        }
                    </button>
                </div>

                <!-- VIP PLAN -->
                <div
                    class={`pricing-card vip ${currentPlan === "VIP" ? "current" : ""}`}
                >
                    <div class="popular-tag">RECOMENDADO</div>
                    {
                        currentPlan === "VIP" && (
                            <div class="current-label">Plano Atual</div>
                        )
                    }
                    <div class="card-header">
                        <span class="plan-name">VIP</span>
                        <div class="price">
                            <span class="currency">R$</span>
                            <span class="amount">597</span>
                            <span class="period">/mês</span>
                        </div>
                    </div>
                    <ul class="features-list">
                        <li>
                            <span class="check">✓</span> Consultoria VIP Direta
                        </li>
                        <li>
                            <span class="check">✓</span> 1 Manutenção Mensal Grátis
                        </li>
                        <li>
                            <span class="check">✓</span> Prioridade Máxima de Build
                        </li>
                        <li>
                            <span class="check">✓</span> Consultoria de SEO Inclusa
                        </li>
                        <li>
                            <span class="check">✓</span> Todos os Benefícios do PRO
                        </li>
                    </ul>
                    <button
                        class="btn-upgrade vip-btn"
                        data-plan="VIP"
                        disabled={currentPlan === "VIP"}
                    >
                        {
                            currentPlan === "VIP"
                                ? "Já Ativo"
                                : "Tornar-se VIP AGORA!"
                        }
                    </button>
                </div>
            </div>

            <section class="faq-minimal">
                <p>
                    Precisa de um plano personalizado? <a
                        href="https://wa.me/5521999064502"
                        >Fale com um consultor</a>
                </p>
            </section>
        </div>
    </div>

    <script>
        const upgradeBtns = document.querySelectorAll(".btn-upgrade");

        upgradeBtns.forEach((btn) => {
            btn.addEventListener("click", async () => {
                const plan = btn.getAttribute("data-plan");
                const originalText = (btn as HTMLElement).innerText;

                (btn as HTMLButtonElement).disabled = true;
                (btn as HTMLElement).innerText = "Processando...";

                try {
                    const response = await fetch("/api/user/update", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ plan }),
                    });

                    if (response.ok) {
                        (window as any).showToast(
                            `Upgrade para ${plan} realizado com sucesso! ✨`,
                        );
                        setTimeout(
                            () => (window.location.href = "/dashboard"),
                            1500,
                        );
                    } else {
                        const data = await response.json();
                        (window as any).showToast(
                            data.message || "Erro no upgrade",
                            "error",
                        );
                        (btn as HTMLButtonElement).disabled = false;
                        (btn as HTMLElement).innerText = originalText;
                    }
                } catch (error) {
                    (window as any).showToast("Erro de conexão", "error");
                    (btn as HTMLButtonElement).disabled = false;
                    (btn as HTMLElement).innerText = originalText;
                }
            });
        });
    </script>
</Layout>

<style>
    .upgrade-wrapper {
        min-height: 100vh;
        background-color: var(--color-bg-body);
        padding: 120px 20px 60px;
        position: relative;
        overflow: hidden;
    }

    .ambient-glow {
        position: absolute;
        top: -100px;
        left: 50%;
        transform: translateX(-50%);
        width: 100%;
        height: 600px;
        background: radial-gradient(
            circle at top,
            rgba(138, 28, 38, 0.15),
            transparent 70%
        );
        pointer-events: none;
    }

    .upgrade-container {
        max-width: 1000px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .upgrade-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .back-link {
        color: var(--color-text-muted);
        text-decoration: none;
        font-size: 0.9rem;
        transition: 0.3s;
        display: inline-block;
        margin-bottom: 1rem;
    }
    .back-link:hover {
        color: var(--color-primary);
    }

    .glow-text {
        font-size: 3rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1rem;
        text-shadow: 0 0 30px rgba(255, 255, 255, 0.1);
    }

    .subtitle {
        color: var(--color-text-muted);
        font-size: 1.1rem;
    }

    .pricing-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2.5rem;
        margin-bottom: 4rem;
    }

    .pricing-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 32px;
        padding: 3rem;
        position: relative;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
    }

    .pricing-card:hover {
        transform: translateY(-10px);
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.1);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .pricing-card.current {
        border-color: var(--color-primary);
        box-shadow: 0 0 30px rgba(138, 28, 38, 0.15);
    }

    .popular-tag {
        position: absolute;
        top: -15px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--color-primary);
        color: white;
        padding: 6px 18px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 800;
        letter-spacing: 1px;
    }

    .current-label {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 0.7rem;
        font-weight: 800;
        color: var(--color-primary);
        text-transform: uppercase;
    }

    .card-header {
        margin-bottom: 2.5rem;
    }

    .plan-name {
        font-size: 1.2rem;
        font-weight: 800;
        color: var(--color-text-muted);
        display: block;
        margin-bottom: 0.5rem;
        letter-spacing: 2px;
    }

    .price {
        display: flex;
        align-items: baseline;
        color: white;
    }

    .currency {
        font-size: 1.5rem;
        font-weight: 600;
        margin-right: 4px;
    }
    .amount {
        font-size: 3.5rem;
        font-weight: 800;
    }
    .period {
        color: var(--color-text-muted);
        margin-left: 8px;
    }

    .features-list {
        list-style: none;
        padding: 0;
        margin: 0 0 3rem;
        flex-grow: 1;
    }

    .features-list li {
        color: #ccc;
        margin-bottom: 1.2rem;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 0.95rem;
    }

    .check {
        color: #34d399;
        font-weight: bold;
    }

    .btn-upgrade {
        width: 100%;
        padding: 1.2rem;
        border-radius: 16px;
        border: none;
        font-weight: 800;
        font-size: 1rem;
        cursor: pointer;
        transition: 0.3s;
    }

    .pro-btn {
        background: rgba(255, 255, 255, 0.05);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    .pro-btn:not(:disabled):hover {
        background: white;
        color: black;
    }

    .vip-btn {
        background: var(--color-primary);
        color: white;
        box-shadow: 0 10px 20px rgba(138, 28, 38, 0.3);
    }
    .vip-btn:not(:disabled):hover {
        transform: scale(1.02);
        box-shadow: 0 15px 30px rgba(138, 28, 38, 0.5);
    }

    .btn-upgrade:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        background: rgba(255, 255, 255, 0.05);
        color: var(--color-text-muted);
        box-shadow: none;
    }

    .faq-minimal {
        text-align: center;
        color: var(--color-text-muted);
    }
    .faq-minimal a {
        color: white;
        font-weight: 600;
    }

    /* VIP Special Style */
    .pricing-card.vip {
        border-color: rgba(212, 175, 55, 0.3);
        background: linear-gradient(
            135deg,
            rgba(212, 175, 55, 0.05) 0%,
            rgba(255, 255, 255, 0.02) 100%
        );
    }
    .pricing-card.vip .plan-name {
        color: #d4af37;
    }
    .pricing-card.vip:hover {
        border-color: rgba(212, 175, 55, 0.6);
    }

    @media (max-width: 768px) {
        .pricing-grid {
            grid-template-columns: 1fr;
        }
        .glow-text {
            font-size: 2rem;
        }
        .pricing-card {
            padding: 2rem;
        }
    }
</style>
