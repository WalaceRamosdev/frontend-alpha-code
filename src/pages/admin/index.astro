---
import Layout from "../../layouts/BaseLayout.astro";
import { getSession } from "../../lib/auth";
import { prisma } from "../../lib/prisma";
import StatusModal from "../../components/ui/StatusModal.astro";

let session = null;
try {
    session = await getSession(Astro.request);
} catch (e) {
    console.error("Admin Auth Error:", e);
}

// Prote√ß√£o de Rota
if (!session || session.user?.role !== "ADMIN") {
    return Astro.redirect("/login");
}

// Buscar estat√≠sticas simples
const totalUsers = await prisma.user.count();
const recentUsers = await prisma.user.findMany({
    take: 5,
    orderBy: { createdAt: "desc" },
    where: { role: "USER" },
});

export const prerender = false;
---

<Layout title="Admin Panel | Alpha Code" showWhatsApp={false}>
    <div class="admin-wrapper">
        <div class="ambient-glow"></div>

        <div class="container admin-container">
            <header class="admin-header">
                <div class="header-left">
                    <span class="badge">Painel de Controle</span>
                    <h1>Gest√£o de Clientes Alpha</h1>
                </div>
                <div class="header-right">
                    <a href="/dashboard" class="back-link"
                        >Voltar ao Dashboard</a
                    >
                </div>
            </header>

            <div class="admin-grid">
                <!-- Form Area -->
                <section class="admin-card create-user-card">
                    <div class="card-header">
                        <h2>Adicionar Novo Cliente</h2>
                        <p>
                            Cadastre clientes que j√° adquiriram sites
                            anteriormente.
                        </p>
                    </div>

                    <form id="create-user-form" class="admin-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="name">Nome Completo</label>
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    placeholder="Ex: Jo√£o Silva"
                                    required
                                />
                            </div>
                            <div class="form-group">
                                <label for="email">E-mail de Acesso</label>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    placeholder="cliente@email.com"
                                    required
                                />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="password">Senha Inicial</label>
                                <input
                                    type="text"
                                    id="password"
                                    name="password"
                                    value="alpha123"
                                    required
                                />
                            </div>
                            <div class="form-group">
                                <label for="plan">Plano Adquirido</label>
                                <select id="plan" name="plan">
                                    <option value="FREE">FREE</option>
                                    <option value="PRO">PRO</option>
                                    <option value="VIP">VIP</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="siteUrl">URL do Site (opcional)</label>
                            <input
                                type="url"
                                id="siteUrl"
                                name="siteUrl"
                                placeholder="https://nome-do-cliente.vercel.app"
                            />
                        </div>

                        <button
                            type="submit"
                            class="btn-submit"
                            id="submit-btn"
                        >
                            <span>Cadastrar Cliente</span>
                            <img
                                src="/assets/logo.svg"
                                alt="Carregando"
                                class="btn-loader hidden pulsing-logo"
                            />
                        </button>
                    </form>
                </section>

                <!-- Stats/List Area -->
                <aside class="admin-sidebar">
                    <div class="admin-card stats-summary">
                        <h3>Resumo da Plataforma</h3>
                        <div class="stat-item">
                            <span class="label">Total de Usu√°rios</span>
                            <span class="value">{totalUsers}</span>
                        </div>
                    </div>

                    <div class="admin-card recent-users">
                        <h3>√öltimos Cadastros</h3>
                        <div class="users-list">
                            {
                                recentUsers.length === 0 ? (
                                    <p class="empty-msg">
                                        Nenhum cliente cadastrado.
                                    </p>
                                ) : (
                                    recentUsers.map((u) => (
                                        <div class="user-item">
                                            <div class="user-info-group">
                                                <div class="user-initials">
                                                    {u.name?.charAt(0)}
                                                </div>
                                                <div class="user-meta">
                                                    <strong>{u.name}</strong>
                                                    <span>{u.email}</span>
                                                    <span
                                                        class={`plan-tag ${u.plan.toLowerCase()}`}
                                                    >
                                                        {u.plan}
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="user-actions">
                                                <button
                                                    class="action-btn edit-btn"
                                                    title="Editar"
                                                    data-user={JSON.stringify(
                                                        u,
                                                    )}
                                                    onclick="openEditModal(this)"
                                                >
                                                    ‚úé
                                                </button>
                                                <button
                                                    class="action-btn reset-btn"
                                                    title="Resetar Senha"
                                                    data-id={u.id}
                                                    data-name={u.name}
                                                    onclick="openResetModal(this)"
                                                >
                                                    üîë
                                                </button>
                                                <button
                                                    class="action-btn delete-btn"
                                                    title="Excluir"
                                                    data-id={u.id}
                                                    data-name={u.name}
                                                    onclick="openDeleteModal(this)"
                                                >
                                                    üóëÔ∏è
                                                </button>
                                            </div>
                                        </div>
                                    ))
                                )
                            }
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>

    <!-- Modals -->
    <div id="edit-modal" class="modal-backdrop hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Editar Cliente</h2>
                <button class="close-modal" onclick="closeModal('edit-modal')"
                    >&times;</button
                >
            </div>
            <form id="edit-user-form">
                <input type="hidden" id="edit-id" name="id" />
                <div class="form-group">
                    <label>Nome</label>
                    <input type="text" id="edit-name" name="name" required />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" id="edit-email" name="email" required />
                </div>
                <div class="form-group">
                    <label>Plano</label>
                    <select id="edit-plan" name="plan">
                        <option value="FREE">FREE</option>
                        <option value="PRO">PRO</option>
                        <option value="VIP">VIP</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Site URL</label>
                    <input type="text" id="edit-siteUrl" name="siteUrl" />
                </div>
                <button type="submit" class="btn-submit"
                    >Salvar Altera√ß√µes</button
                >
            </form>
        </div>
    </div>

    <div id="reset-modal" class="modal-backdrop hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Resetar Senha</h2>
                <button class="close-modal" onclick="closeModal('reset-modal')"
                    >&times;</button
                >
            </div>
            <p>
                Defina uma nova senha para <strong id="reset-user-name"
                    >Usu√°rio</strong
                >
            </p>
            <form id="reset-password-form">
                <input type="hidden" id="reset-id" name="userId" />
                <div class="form-group">
                    <label>Nova Senha</label>
                    <input
                        type="text"
                        name="newPassword"
                        placeholder="M√≠nimo 6 caracteres"
                        required
                    />
                </div>
                <button type="submit" class="btn-submit">Alterar Senha</button>
            </form>
        </div>
    </div>

    <div id="delete-modal" class="modal-backdrop hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Excluir Cliente</h2>
                <button class="close-modal" onclick="closeModal('delete-modal')"
                    >&times;</button
                >
            </div>
            <p>
                Tem certeza que deseja excluir <strong id="delete-user-name"
                    >Usu√°rio</strong
                >?
            </p>
            <p class="warning-text">Esta a√ß√£o n√£o pode ser desfeita.</p>

            <div class="modal-actions">
                <button class="btn-cancel" onclick="closeModal('delete-modal')"
                    >Cancelar</button
                >
                <button id="confirm-delete-btn" class="btn-delete"
                    >Confirmar Exclus√£o</button
                >
            </div>
        </div>
    </div>

    <StatusModal
        id="admin-status-modal"
        title="Processando..."
        message="Aguarde um momento"
        type="loading"
    />
</Layout>

<script is:inline>
    // Global Modal Functions
    window.openEditModal = (btn) => {
        const user = JSON.parse(btn.getAttribute("data-user"));
        document.getElementById("edit-id").value = user.id;
        document.getElementById("edit-name").value = user.name;
        document.getElementById("edit-email").value = user.email;
        document.getElementById("edit-plan").value = user.plan;
        document.getElementById("edit-siteUrl").value = user.siteUrl || "";

        document.getElementById("edit-modal").classList.remove("hidden");
    };

    window.openResetModal = (btn) => {
        const id = btn.getAttribute("data-id");
        const name = btn.getAttribute("data-name");
        document.getElementById("reset-id").value = id;
        document.getElementById("reset-user-name").innerText = name;
        document.getElementById("reset-modal").classList.remove("hidden");
    };

    let deleteUserId = null;
    window.openDeleteModal = (btn) => {
        deleteUserId = btn.getAttribute("data-id");
        const name = btn.getAttribute("data-name");
        document.getElementById("delete-user-name").innerText = name;
        document.getElementById("delete-modal").classList.remove("hidden");
    };

    window.closeModal = (id) => {
        document.getElementById(id).classList.add("hidden");
    };

    // Close on backdrop click
    window.onclick = (e) => {
        if (e.target.classList.contains("modal-backdrop")) {
            e.target.classList.add("hidden");
        }
    };

    // --- Forms Handlers ---

    // 1. Create User
    const createForm = document.getElementById("create-user-form");
    if (createForm) {
        createForm.addEventListener("submit", async (e) => {
            e.preventDefault();
            const btn = document.getElementById("submit-btn");
            if (btn) btn.innerText = "Cadastrando...";

            await handleAdminAction(
                "/api/admin/create-user",
                createForm,
                () => {
                    window.location.reload();
                },
            );

            if (btn) btn.innerText = "Cadastrar Cliente";
        });
    }

    // 2. Edit User
    const editForm = document.getElementById("edit-user-form");
    if (editForm) {
        editForm.addEventListener("submit", async (e) => {
            e.preventDefault();
            window.closeModal("edit-modal");
            await handleAdminAction("/api/admin/update-user", editForm, () => {
                window.location.reload();
            });
        });
    }

    // 3. Reset Password
    const resetForm = document.getElementById("reset-password-form");
    if (resetForm) {
        resetForm.addEventListener("submit", async (e) => {
            e.preventDefault();
            window.closeModal("reset-modal");
            await handleAdminAction("/api/admin/reset-password", resetForm);
        });
    }

    // 4. Delete User
    const deleteBtn = document.getElementById("confirm-delete-btn");
    if (deleteBtn) {
        deleteBtn.addEventListener("click", async () => {
            window.closeModal("delete-modal");

            if (window.showModal)
                window.showModal(
                    "Excluindo...",
                    "Removendo usu√°rio do sistema",
                    "loading",
                );

            try {
                const res = await fetch("/api/admin/delete-user", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ userId: deleteUserId }),
                });

                if (res.ok) {
                    if (window.showModal)
                        window.showModal(
                            "Sucesso",
                            "Usu√°rio exclu√≠do.",
                            "success",
                        );
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    const data = await res.json();
                    if (window.showModal)
                        window.showModal(
                            "Erro",
                            data.message || "Falha ao excluir",
                            "error",
                        );
                    setTimeout(() => window.hideModal(), 3000);
                }
            } catch (err) {
                if (window.showModal)
                    window.showModal("Erro", "Erro de conex√£o", "error");
                setTimeout(() => window.hideModal(), 3000);
            }
        });
    }

    // Helper
    async function handleAdminAction(url, formElement, onSuccess) {
        const formData = new FormData(formElement);
        const data = Object.fromEntries(formData);

        if (window.showModal)
            window.showModal("Processando...", "Aguarde", "loading");

        try {
            const res = await fetch(url, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(data),
            });

            const result = await res.json();

            if (res.ok) {
                if (window.showModal)
                    window.showModal("Sucesso!", result.message, "success");
                if (formElement) formElement.reset();
                if (onSuccess) setTimeout(onSuccess, 1500);
                else setTimeout(() => window.hideModal(), 2000);
            } else {
                if (window.showModal)
                    window.showModal(
                        "Erro",
                        result.message || "Algo deu errado",
                        "error",
                    );
                setTimeout(() => window.hideModal(), 3000);
            }
        } catch (err) {
            console.error(err);
            if (window.showModal)
                window.showModal("Erro", "Falha de conex√£o", "error");
            setTimeout(() => window.hideModal(), 3000);
        }
    }
</script>

