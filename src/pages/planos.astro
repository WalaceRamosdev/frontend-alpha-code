---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/ui/Button.astro";
import Card from "../components/ui/Card.astro";

const title = "Planos e Preços | Alpha Code";
const description =
    "Confira os detalhes completos dos nossos planos de criação de sites.";
---

<BaseLayout
    title={title}
    description={description}
    canonicalUrl={`${Astro.site}planos`}
>
    <section class="plans-hero">
        <div class="container text-center">
            <h1 class="fade-up">Compare Nossos Planos</h1>
            <p class="fade-up delay-1">
                Escolha a estrutura ideal para o seu crescimento.
            </p>
        </div>
    </section>

    <section
        class="plans-page-container container"
        style="padding-bottom: 80px;"
    >
        <div class="pricing-grid">
            <!-- PLAN 1 -->
            <Card variant="price" class="plan-regular fade-up">
                <div class="price-header">
                    <h3>Landing Page</h3>
                    <div class="price"><small>R$</small> 347</div>
                    <p class="subtitle">Direto ao ponto</p>
                </div>

                <div class="plan-body">
                    <p class="plan-desc">
                        Serve pra vender uma coisa só. Direto ao ponto. Sem
                        frescura.
                    </p>

                    <div class="spec-group">
                        <h4>O que inclui:</h4>
                        <ul class="features">
                            <li>
                                <span class="check">✓</span> Página única, rolagem
                                vertical
                            </li>
                            <li>
                                <span class="check">✓</span> Foco em conversão: WhatsApp
                                ou Form
                            </li>
                            <li>
                                <span class="check">✓</span> Copy estratégica para
                                captar leads
                            </li>
                            <li>
                                <span class="check">✓</span> Design moderno e responsivo
                            </li>
                            <li>
                                <span class="check">✓</span> Carregamento rápido
                            </li>
                            <li>
                                <span class="check">✓</span> Ideal para anúncios pagos
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="action-btn">
                    <Button
                        href="/pedido?plan=simples"
                        variant="outline"
                        class="w-full">Selecionar</Button
                    >
                </div>
            </Card>

            <!-- PLAN 2 (Featured) -->
            <Card variant="price" class="featured fade-up delay-1">
                <div class="badge-gold">Mais Vendido</div>
                <div class="price-header">
                    <h3>Página Completa</h3>
                    <div class="price text-primary"><small>R$</small> 599</div>
                    <p class="subtitle">Site Institucional</p>
                </div>

                <div class="plan-body">
                    <p class="plan-desc">
                        Aqui o negócio começa a parecer empresa de verdade.
                    </p>

                    <div class="spec-group">
                        <h4>O que inclui:</h4>
                        <ul class="features">
                            <li>
                                <span class="check">✓</span>
                                <strong
                                    >Múltiplas páginas (Home, Sobre, etc)</strong
                                >
                            </li>
                            <li>
                                <span class="check">✓</span> Estrutura de credibilidade
                                e autoridade
                            </li>
                            <li>
                                <span class="check">✓</span> Design profissional e
                                responsivo
                            </li>
                            <li>
                                <span class="check">✓</span> Conteúdo organizado sobre
                                você
                            </li>
                            <li>
                                <span class="check">✓</span> Integração com WhatsApp
                                e Redes
                            </li>
                            <li>
                                <span class="check">✓</span> SEO básico para o Google
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="action-btn">
                    <Button
                        href="/pedido?plan=completa"
                        variant="primary"
                        class="w-full btn-glow">Quero este Plano</Button
                    >
                </div>
            </Card>

            <!-- PLAN 3 -->
            <Card variant="price" class="plan-regular fade-up delay-2">
                <div class="price-header">
                    <h3>Página Premium</h3>
                    <div class="price"><small>R$</small> 947</div>
                    <p class="subtitle">Outro Nível</p>
                </div>

                <div class="plan-body">
                    <p class="plan-desc">
                        Isso aqui é outro nível. Para quem quer dominar o jogo.
                    </p>

                    <div class="spec-group">
                        <h4>O que inclui:</h4>
                        <ul class="features">
                            <li>
                                <span class="check">✓</span>
                                <strong
                                    >Design exclusivo e personalizado UI/UX</strong
                                >
                            </li>
                            <li>
                                <span class="check">✓</span> Múltiplas páginas + seções
                                de conversão
                            </li>
                            <li>
                                <span class="check">✓</span> SEO avançado para posicionamento
                            </li>
                            <li>
                                <span class="check">✓</span> Performance otimizada
                                (Velocidade)
                            </li>
                            <li>
                                <span class="check">✓</span> Integrações avançadas
                                (CRM, Agenda)
                            </li>
                            <li>
                                <span class="check">✓</span> Estrutura para escalabilidade
                            </li>
                            <li>
                                <span class="check">✓</span> Experiência de venda
                                24h
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="action-btn">
                    <Button
                        href="/pedido?plan=premium"
                        variant="outline"
                        class="w-full">Selecionar</Button
                    >
                </div>
            </Card>
        </div>
    </section>
</BaseLayout>

<style is:global>
    .plans-page-container .plans-hero {
        padding: 80px 0;
    }

    .plans-page-container .pricing-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        margin-top: 40px;
        /* align-items: start; Removed to ensure equal height */
    }

    /* Global Card Padding Fix for this page */
    .plans-page-container .price-card {
        padding: 3rem 2rem !important; /* Fix button touching edges */
        display: flex;
        flex-direction: column;
        height: 100%;
        box-sizing: border-box; /* Ensure padding doesn't break layout */
    }

    /* ... skipped ... */

    /* Featured Card Styling - FORCED PRIMARY COLOR */
    /* Simplified selector to ensure it applies */
    .plans-page-container .featured {
        border: 1px solid rgba(138, 28, 38, 0.5) !important; /* Subtle border fallback */
        position: relative;
        transform: scale(1.02);
        z-index: 5;
        /* Gradient Background */
        background: linear-gradient(
            145deg,
            #1a0507,
            #2d0a0d
        ) !important; /* Darker Premium Red/Black */
        box-shadow: 0 10px 40px rgba(138, 28, 38, 0.2) !important;
        overflow: visible !important;
        backdrop-filter: none !important;
        -webkit-backdrop-filter: none !important;
    }

    /* If user wants the BRIGHT red from homepage, use this, but dark premium is often better for detail pages. 
       Let's stick to the homepage consistency? 
       Homepage uses: background: var(--gradient-primary) !important; 
       Let's use that to be safe and match homepage. */
    .plans-page-container .featured {
        border: none !important;
        position: relative;
        transform: scale(1.02);
        z-index: 5;
        background: var(--gradient-primary) !important;
        color: #ffffff !important;
        box-shadow: 0 10px 40px rgba(138, 28, 38, 0.4) !important;
        overflow: visible !important;
        backdrop-filter: none !important;
        -webkit-backdrop-filter: none !important;
    }

    /* Force all text inside featured to be white regardless of mode */
    .plans-page-container .featured h3,
    .plans-page-container .featured p,
    .plans-page-container .featured .price,
    .plans-page-container .featured small,
    .plans-page-container .featured li,
    .plans-page-container .featured span,
    .plans-page-container .featured .check {
        color: #ffffff !important;
    }

    .plans-page-container .featured .price-header {
        border-bottom-color: rgba(255, 255, 255, 0.3) !important;
    }

    /* Remove Simulated Gradient Border for Featured */
    .plans-page-container .featured::after {
        display: none;
    }

    /* Featured button specific style */
    .plans-page-container .featured .btn-primary {
        background: #ffffff !important;
        color: var(--color-primary) !important;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2) !important;
    }
    .plans-page-container .featured .btn-primary:hover {
        background: #f0f0f0 !important;
        transform: translateY(-2px);
    }

    .plans-page-container .action-btn {
        margin-top: 2rem;
        padding-bottom: 0.5rem;
        display: flex;
        justify-content: center;
    }

    .plans-page-container .w-full {
        width: auto !important; /* Let content dictate width */
        min-width: 200px;
        padding-left: 2rem;
        padding-right: 2rem;
    }

    /* Responsive Padding for Mobile */
    @media (max-width: 768px) {
        .plans-page-container .price-card {
            padding: 2rem 1.5rem 3rem 1.5rem !important; /* Added bottom padding */
        }
        .plans-page-container .price {
            font-size: 3rem;
        }
    }

    .plans-page-container .btn-glow {
        box-shadow: 0 0 20px rgba(214, 40, 57, 0.4);
    }
</style>
