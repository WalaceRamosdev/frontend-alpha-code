<style>
    .solution-page {
        padding-top: 100px;
        background: #050505;
        color: #fff;
        overflow-x: hidden;
    }

    .ambient-glow {
        position: fixed;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100vw;
        height: 100vh;
        background:
            radial-gradient(
                circle at 20% 30%,
                rgba(138, 28, 38, 0.08),
                transparent 50%
            ),
            radial-gradient(
                circle at 80% 70%,
                rgba(214, 40, 57, 0.05),
                transparent 50%
            );
        pointer-events: none;
        z-index: 0;
    }

    .hero-section {
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        gap: 60px;
        align-items: center;
        padding-bottom: 100px;
        position: relative;
        z-index: 1;
    }

    .badge {
        display: inline-block;
        padding: 6px 16px;
        background: rgba(138, 28, 38, 0.1);
        border: 1px solid rgba(138, 28, 38, 0.3);
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 1px;
        color: var(--color-primary);
        margin-bottom: 2rem;
    }

    h1 {
        font-size: 4rem;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        font-weight: 800;
    }

    .hero-desc {
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.6);
        max-width: 600px;
        margin-bottom: 3rem;
        line-height: 1.6;
    }

    .cta-group {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .price-tag {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.4);
    }

    .price-tag strong {
        color: #fff;
        font-size: 1.1rem;
    }

    .hero-image {
        position: relative;
    }

    .main-mockup {
        width: 130%;
        height: auto;
        filter: drop-shadow(0 30px 60px rgba(0, 0, 0, 0.8));
    }

    .floating-badge {
        position: absolute;
        top: 20%;
        right: -10%;
        background: var(--color-primary);
        width: 120px;
        height: 120px;
        border-radius: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        box-shadow: 0 15px 30px rgba(214, 40, 57, 0.4);
        animation: float 4s ease-in-out infinite;
    }

    .floating-badge .number {
        font-size: 2rem;
        font-weight: 900;
    }

    .floating-badge .label {
        font-size: 0.6rem;
        font-weight: 800;
        text-align: center;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    /* PAIN SECTION */
    .pain-section {
        padding: 100px 0;
        background: rgba(255, 255, 255, 0.02);
    }

    .section-header h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        margin-top: 60px;
    }

    .stat-card {
        padding: 40px;
        border-radius: 24px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        text-align: center;
    }

    .stat-card.pain {
        border-color: rgba(138, 28, 38, 0.2);
    }

    .stat-card.solution {
        border-color: rgba(52, 211, 153, 0.2);
    }

    .stat-icon {
        font-size: 3rem;
        margin-bottom: 1.5rem;
    }

    .stat-value {
        display: block;
        font-size: 2rem;
        font-weight: 800;
        margin-top: 1.5rem;
    }

    .pain .stat-value {
        color: #ff4d4d;
    }
    .solution .stat-value {
        color: #34d399;
    }

    /* FEATURES */
    .features-section {
        padding: 120px 0;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 40px;
    }

    .feature-item {
        padding: 30px;
    }

    .feature-item .icon {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        color: var(--color-primary);
    }

    .feature-item h4 {
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }

    .feature-item p {
        color: rgba(255, 255, 255, 0.5);
        line-height: 1.5;
    }

    /* FINAL CTA */
    .final-cta {
        padding-bottom: 120px;
    }

    .cta-box {
        background: linear-gradient(
            135deg,
            rgba(138, 28, 38, 0.1) 0%,
            rgba(5, 5, 5, 0.5) 100%
        );
        border: 1px solid rgba(138, 28, 38, 0.3);
        padding: 80px 40px;
        border-radius: 40px;
        backdrop-filter: blur(10px);
    }

    .cta-box h2 {
        font-size: 3rem;
        margin-bottom: 1.5rem;
    }

    .cta-box p {
        margin-bottom: 3rem;
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .pulse-btn {
        animation: pulse-shadow 2s infinite;
    }

    @keyframes pulse-shadow {
        0% {
            box-shadow: 0 0 0 0 rgba(214, 40, 57, 0.4);
        }
        70% {
            box-shadow: 0 0 0 20px rgba(214, 40, 57, 0);
        }
        100% {
            box-shadow: 0 0 0 0 rgba(214, 40, 57, 0);
        }
    }

    @media (max-width: 992px) {
        .hero-section {
            grid-template-columns: 1fr;
            text-align: center;
        }
        .hero-desc {
            margin: 0 auto 3rem;
        }
        .hero-image {
            order: -1;
            margin-bottom: 40px;
        }
        .main-mockup {
            width: 100%;
        }
        h1 {
            font-size: 3rem;
        }
        .stats-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
