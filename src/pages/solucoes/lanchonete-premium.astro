<style>
    .solution-page {
        padding-top: 100px;
        background: #050505;
        color: #fff;
        overflow-x: hidden;
    }
    .ambient-glow {
        position: fixed;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100vw;
        height: 100vh;
        background: radial-gradient(
            circle at 20% 30%,
            rgba(214, 40, 57, 0.08),
            transparent 50%
        );
        pointer-events: none;
        z-index: 0;
    }
    .hero-section {
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        gap: 60px;
        align-items: center;
        padding-bottom: 100px;
        position: relative;
        z-index: 1;
    }
    .badge {
        display: inline-block;
        padding: 6px 16px;
        background: rgba(214, 40, 57, 0.1);
        border: 1px solid rgba(214, 40, 57, 0.3);
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        color: #ef4444;
        margin-bottom: 2rem;
    }
    h1 {
        font-size: 4rem;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        font-weight: 800;
    }
    .hero-desc {
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.6);
        max-width: 600px;
        margin-bottom: 3rem;
        line-height: 1.6;
    }
    .cta-group {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }
    .price-tag {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.4);
    }
    .price-tag strong {
        color: #fff;
        font-size: 1.1rem;
    }
    .main-mockup {
        width: 140%;
        height: auto;
        filter: drop-shadow(0 30px 60px rgba(0, 0, 0, 0.8));
    }
    .pain-section {
        padding: 100px 0;
        background: rgba(255, 255, 255, 0.02);
    }
    .stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        margin-top: 60px;
    }
    .stat-card {
        padding: 40px;
        border-radius: 24px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        text-align: center;
    }
    .stat-icon {
        font-size: 3rem;
        margin-bottom: 1.5rem;
    }
    .cta-box {
        border: 1px solid rgba(214, 40, 57, 0.3);
        padding: 80px 40px;
        border-radius: 40px;
        backdrop-filter: blur(10px);
    }
    @media (max-width: 992px) {
        .hero-section {
            grid-template-columns: 1fr;
            text-align: center;
        }
        .hero-desc {
            margin: 0 auto 3rem;
        }
        .hero-image {
            order: -1;
            margin-bottom: 40px;
        }
        .main-mockup {
            width: 100%;
        }
        h1 {
            font-size: 3rem;
        }
        .stats-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
