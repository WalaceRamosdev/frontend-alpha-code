---
import BaseLayout from "../layouts/BaseLayout.astro";
import OrderForm from "../components/react/OrderForm.jsx";

const title = "Finalizar Pedido | Alpha Code";
---

<BaseLayout title={title} noIndex={true}>
    <section class="order-page">
        <div class="order-header container">
            <h1>Vamos iniciar seu projeto</h1>
            <p>Preencha os dados abaixo para oficializar seu pedido.</p>
        </div>

        <OrderForm client:load />
    </section>
</BaseLayout>

<style>
    .order-page {
        padding: 80px 0;
    }
    .order-header {
        text-align: center;
        margin-bottom: 60px;
    }
    h1 {
        font-size: clamp(2.5rem, 8vw, 3.5rem);
        font-weight: 800;
        margin-bottom: 1rem;
    }
    p {
        color: var(--color-text-light);
        font-size: 1.1rem;
    }
</style>
