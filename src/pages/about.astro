---
import BaseLayout from "../layouts/BaseLayout.astro";
import AboutSection from "../components/sections/About.astro";

const title = "Sobre Nós | Alpha Code";
const description =
    "Conheça a Alpha Code, especialistas em criação de sites de alta conversão.";
---

<BaseLayout title={title} description={description}>
    <main style="padding-top: 80px;">
        <AboutSection />

        <section class="container text-center mission-section">
            <h3 class="mb-4">Nossa Missão</h3>
            <p>
                Fundada com o objetivo de democratizar o acesso a sites de
                qualidade premium.
            </p>
        </section>
    </main>
</BaseLayout>

<style>
    .mission-section {
        padding: 50px 0 100px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    .mission-section p {
        width: 100%;
        max-width: 500px;
        margin-left: auto !important;
        margin-right: auto !important;
    }
</style>
