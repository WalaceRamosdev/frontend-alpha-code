---
import BaseLayout from '../layouts/BaseLayout.astro';
import AboutSection from '../components/sections/About.astro';

const title = "Sobre Nós | Alpha Code";
const description = "Conheça a Alpha Code, especialistas em criação de sites de alta conversão.";
---

<BaseLayout title={title} description={description}>
    <main style="padding-top: 80px;">
        <AboutSection />
        
        <section class="container text-center" style="padding-bottom: 80px;">
            <h3>Nossa Missão</h3>
            <p>Fundada com o objetivo de democratizar o acesso a sites de qualidade premium.</p>
        </section>
    </main>
</BaseLayout>
