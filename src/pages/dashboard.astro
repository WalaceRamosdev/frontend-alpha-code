    <!-- Modal Vincular Site -->
    <div id="site-modal" class="modal-backdrop hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Vincular Projeto Alpha</h2>
                <button id="close-site-modal" class="close-btn">&times;</button>
            </div>
            <form class="project-form" id="site-url-form">
                <div class="form-group">
                    <label>URL do seu site adquirido</label>
                    <input
                        type="url"
                        id="site-url-input"
                        placeholder="https://seuprojeto.com.br"
                        required
                        value={session.user?.siteUrl || ""}
                    />
                    <small
                        style="color: var(--color-text-muted); font-size: 0.75rem; display: block; margin-top: 0.5rem;"
                    >
                        Insira a URL completa para aparecer no seu dashboard.
                    </small>
                </div>
                <div class="modal-actions">
                    <button
                        type="button"
                        id="cancel-site-modal"
                        class="btn-secondary">Cancelar</button
                    >
                    <button type="submit" class="btn-submit" id="save-site-btn"
                        >Salvar Link</button
                    >
                </div>
            </form>
        </div>
    </div>

    <script>
        // Modal Logic - New Project
        const modal = document.getElementById("project-modal");
        const openBtns = [
            document.getElementById("new-project-btn"),
            document.getElementById("new-project-cta"),
        ];
        const closeBtn = document.getElementById("close-modal");
        const cancelBtn = document.getElementById("cancel-modal");

        // Modal Logic - Link Site
        const siteModal = document.getElementById("site-modal");
        const openSiteBtn = document.getElementById("add-site-link");
        const closeSiteBtn = document.getElementById("close-site-modal");
        const cancelSiteBtn = document.getElementById("cancel-site-modal");
        const siteForm = document.getElementById("site-url-form");

        function openModal(m: HTMLElement | null) {
            m?.classList.remove("hidden");
            document.body.style.overflow = "hidden";
        }

        function closeModal(m: HTMLElement | null) {
            m?.classList.add("hidden");
            document.body.style.overflow = "";
        }

        openBtns.forEach((btn) =>
            btn?.addEventListener("click", () => openModal(modal)),
        );
        closeBtn?.addEventListener("click", () => closeModal(modal));
        cancelBtn?.addEventListener("click", () => closeModal(modal));

        openSiteBtn?.addEventListener("click", () => openModal(siteModal));
        closeSiteBtn?.addEventListener("click", () => closeModal(siteModal));
        cancelSiteBtn?.addEventListener("click", () => closeModal(siteModal));

        // Site URL Save Logic
        if (siteForm) {
            siteForm.addEventListener("submit", async (e) => {
                e.preventDefault();
                const saveBtn = document.getElementById(
                    "save-site-btn",
                ) as HTMLButtonElement;
                const urlInput = document.getElementById(
                    "site-url-input",
                ) as HTMLInputElement;

                if (saveBtn) saveBtn.innerText = "Salvando...";

                try {
                    const response = await fetch("/api/user/update", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({
                            name: "Cliente Alpha", // Fallback ou carregar do session se necess√°rio
                            siteUrl: urlInput.value,
                        }),
                    });

                    if (response.ok) {
                        (window as any).showToast("Link salvo com sucesso!");
                        setTimeout(() => window.location.reload(), 1500);
                    } else {
                        (window as any).showToast(
                            "Erro ao salvar link.",
                            "error",
                        );
                    }
                } catch (error) {
                    console.error("Site URL update error:", error);
                } finally {
                    if (saveBtn) saveBtn.innerText = "Salvar Link";
                }
            });
        }

        // Copy URL Logic
        const copyBtns = document.querySelectorAll(".copy-url-btn");
        copyBtns.forEach((btn) => {
            btn.addEventListener("click", () => {
                const url = btn.getAttribute("data-url");
                if (url) {
                    navigator.clipboard.writeText(url);
                    const originalHTML = btn.innerHTML;
                    btn.innerHTML =
                        '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#34d399" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>';
                    setTimeout(() => {
                        btn.innerHTML = originalHTML;
                    }, 2000);
                }
            });
        });

        // Close on click outside
        window.addEventListener("click", (e) => {
            if (e.target === modal) closeModal(modal);
            if (e.target === siteModal) closeModal(siteModal);
        });

        // Logout Logic
        const logoutBtn = document.getElementById("logout-btn");
        if (logoutBtn) {
            logoutBtn.addEventListener("click", async () => {
                const originalText = logoutBtn.innerHTML;
                logoutBtn.innerText = "Saindo...";
                try {
                    const csrfRes = await fetch("/api/auth/csrf");
                    const { csrfToken } = await csrfRes.json();

                    await fetch("/api/auth/signout", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ csrfToken, callbackUrl: "/" }),
                    });

                    window.location.href = "/";
                } catch (e) {
                    console.error("Logout failed", e);
                    window.location.href = "/";
                }
            });
        }
    </script>

    <style>
