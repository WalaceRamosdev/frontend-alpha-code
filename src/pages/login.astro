---
import Layout from "../layouts/BaseLayout.astro";
import { getSession } from "../lib/auth";
import StatusModal from "../components/ui/StatusModal.astro";
import "../styles/auth.css";

let session = null;
try {
    session = await getSession(Astro.request);
} catch (e) {
    console.error("Login Page Auth Error:", e);
}
if (session) {
    return Astro.redirect("/dashboard");
}
export const prerender = false;
---

<Layout
    title="Entrar | Alpha Code"
    showHeader={false}
    showFooter={false}
    showWhatsApp={false}
>
    <div class="auth-page-wrapper">
        <div class="auth-left-panel">
            <div class="brand-logo-text">
                <img
                    src="/assets/logo.svg"
                    alt="Alpha Code"
                    width="32"
                    height="32"
                />
                Alpha Code
            </div>

            <h1 class="login-heading">LOGIN</h1>

            <p class="welcome-subtext">
                Olá, bem-vindo de volta! <br />
                Esperamos que você tenha tido um ótimo dia.
            </p>

            <div class="google-btn-container">
                <button type="button" id="google-login-btn" class="google-btn">
                    <svg
                        class="google-icon"
                        viewBox="0 0 24 24"
                        width="20"
                        height="20"
                    >
                        <path
                            fill="#4285F4"
                            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                        ></path>
                        <path
                            fill="#34A853"
                            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                        ></path>
                        <path
                            fill="#FBBC05"
                            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                        ></path>
                        <path
                            fill="#EA4335"
                            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                        ></path>
                    </svg>
                    Entrar com Google
                </button>
            </div>

            <p class="signup-hint">
                Ainda não é membro? <a href="/cadastro">Cadastre-se</a>
            </p>
        </div>

        <div class="auth-right-panel">
            <div class="glass-card">
                <form
                    action="/api/auth/callback/credentials"
                    method="POST"
                    id="credentials-form"
                >
                    <input
                        type="hidden"
                        name="callbackUrl"
                        value="/dashboard"
                    />

                    <div class="form-group">
                        <label class="form-label">Email ou Celular</label>
                        <input
                            name="email"
                            type="text"
                            required
                            class="form-input"
                            placeholder="Ex: seu@email.com"
                        />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Senha</label>
                        <input
                            name="password"
                            type="password"
                            required
                            class="form-input"
                            placeholder="••••••••"
                        />
                    </div>

                    <button type="submit" class="submit-btn"> ENTRAR </button>

                    <div style="margin-top: 1.5rem; text-align: center;">
                        <a
                            href="#"
                            id="forgot-password"
                            style="color: #666; font-size: 0.85rem; text-decoration: none;"
                            >Esqueceu a senha?</a
                        >
                    </div>
                </form>
            </div>
        </div>

        <div class="copyright">© Copyright 2026 Alpha Code</div>
    </div>

    <StatusModal
        id="login-status-modal"
        title="Aguarde..."
        message="Processando seu acesso"
        type="loading"
    />

    <script is:inline>
        // Google Login
        const googleBtn = document.getElementById("google-login-btn");
        if (googleBtn) {
            googleBtn.addEventListener("click", async () => {
                const originalText = googleBtn.innerHTML;
                googleBtn.disabled = true;
                googleBtn.innerHTML = "Conectando...";

                try {
                    const csrfRes = await fetch("/api/auth/csrf");
                    const { csrfToken } = await csrfRes.json();

                    const form = document.createElement("form");
                    form.method = "POST";
                    form.action = "/api/auth/signin/google";

                    const csrfInput = document.createElement("input");
                    csrfInput.type = "hidden";
                    csrfInput.name = "csrfToken";
                    csrfInput.value = csrfToken;
                    form.appendChild(csrfInput);

                    const callbackInput = document.createElement("input");
                    callbackInput.type = "hidden";
                    callbackInput.name = "callbackUrl";
                    callbackInput.value = "/dashboard";
                    form.appendChild(callbackInput);

                    document.body.appendChild(form);
                    form.submit();
                } catch (err) {
                    console.error("Google login error:", err);
                    alert("Erro ao iniciar login com Google.");
                    googleBtn.innerHTML = originalText;
                    googleBtn.disabled = false;
                }
            });
        }

        // Credentials Login
        const form = document.getElementById("credentials-form");
        if (form) {
            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const submitBtn = form.querySelector('button[type="submit"]');
                if (!submitBtn) return;

                const originalText = submitBtn.textContent || "";

                if (window.showModal) {
                    window.showModal(
                        "Acessando...",
                        "Verificando suas credenciais",
                        "loading",
                    );
                }

                try {
                    const formData = new FormData(form);
                    const email = formData.get("email");
                    const password = formData.get("password");

                    const csrfRes = await fetch("/api/auth/csrf");
                    const { csrfToken } = await csrfRes.json();

                    const params = new URLSearchParams();
                    params.append("email", email);
                    params.append("password", password);
                    params.append("csrfToken", csrfToken);
                    params.append("callbackUrl", "/dashboard");
                    params.append("json", "true");

                    const res = await fetch("/api/auth/callback/credentials", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/x-www-form-urlencoded",
                        },
                        body: params,
                    });

                    let data = null;
                    try {
                        data = await res.json();
                    } catch (e) {
                        console.warn(
                            "Response was not JSON, possibly HTML redirect",
                        );
                    }

                    const hasError =
                        (data?.url && data.url.includes("error")) ||
                        res.url.includes("error");

                    if (res.ok && !hasError) {
                        if (window.showModal)
                            window.showModal(
                                "Sucesso!",
                                "Seja bem vindo novamente",
                                "success",
                            );

                        setTimeout(() => {
                            window.location.href = data?.url || "/dashboard";
                        }, 1200);
                    } else {
                        if (window.showModal)
                            window.showModal(
                                "Falha no Acesso",
                                "Email ou senha incorretos.",
                                "error",
                            );
                        setTimeout(
                            () => window.hideModal && window.hideModal(),
                            3000,
                        );
                    }
                } catch (err) {
                    console.error(err);
                    if (window.showModal)
                        window.showModal(
                            "Erro de Conexão",
                            "Não foi possível conectar ao servidor.",
                            "error",
                        );
                    setTimeout(
                        () => window.hideModal && window.hideModal(),
                        3000,
                    );
                }
            });
        }

        // Forgot Password Action
        const forgotBtn = document.getElementById("forgot-password");
        if (forgotBtn) {
            forgotBtn.addEventListener("click", (e) => {
                e.preventDefault();
                if (window.showModal)
                    window.showModal(
                        "Recuperação",
                        "Entre em contato pelo WhatsApp.",
                        "success",
                    );

                setTimeout(() => {
                    if (window.hideModal) window.hideModal();
                    window.open(
                        "https://wa.me/5521999064502?text=Olá, preciso resetar minha senha no Alpha Code.",
                        "_blank",
                    );
                }, 3000);
            });
        }
    </script>
</Layout>
