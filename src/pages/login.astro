---
import Layout from "../layouts/BaseLayout.astro";
import { getSession } from "../lib/auth";
import "../styles/auth.css";

let session = null;
try {
    session = await getSession(Astro.request);
} catch (e) {
    console.error("Login Page Auth Error:", e);
}
if (session) {
    return Astro.redirect("/dashboard");
}
export const prerender = false;
---

<Layout
    title="Login | Alpha Code"
    showHeader={false}
    showFooter={false}
    showWhatsApp={false}
>
    <div
        class="h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 relative overflow-hidden"
        style="background-color: var(--color-bg-body);"
    >
        <!-- Subtle background glow -->
        <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] opacity-10 blur-[120px] pointer-events-none rounded-full"
            style="background: var(--color-primary);"
        >
        </div>

        <div class="auth-container">
            <div
                style="margin-bottom: 1.5rem; display: flex; justify-content: space-between; align-items: center;"
            >
                <a
                    href="/"
                    style="color: var(--color-text-muted); font-size: 0.85rem; display: flex; align-items: center; gap: 0.5rem;"
                >
                    <svg
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><line x1="19" y1="12" x2="5" y2="12"></line><polyline
                            points="12 19 5 12 12 5"></polyline></svg
                    >
                    Voltar ao início
                </a>
                <img
                    src="/assets/logo.svg"
                    alt="Alpha Code"
                    width="24"
                    height="24"
                    style="opacity: 0.8;"
                />
            </div>

            <h2 class="auth-title">Acesse sua Conta</h2>

            <button type="button" id="google-login-btn" class="google-btn">
                <svg class="google-icon" viewBox="0 0 24 24">
                    <path
                        fill="#4285F4"
                        d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                    ></path>
                    <path
                        fill="#34A853"
                        d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                    ></path>
                    <path
                        fill="#FBBC05"
                        d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                    ></path>
                    <path
                        fill="#EA4335"
                        d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                    ></path>
                </svg>
                Entrar com Google
            </button>

            <div class="divider">
                <span>Ou continue com email</span>
            </div>

            <form action="/api/auth/callback/credentials" method="POST">
                <input type="hidden" name="callbackUrl" value="/dashboard" />

                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input
                        name="email"
                        type="email"
                        required
                        class="form-input"
                        placeholder="seu@email.com"
                        value="walace@alphacode.com.br"
                    />
                </div>

                <div class="form-group">
                    <label class="form-label">Senha</label>
                    <input
                        name="password"
                        type="password"
                        required
                        class="form-input"
                        placeholder="••••••••"
                    />
                </div>

                <button type="submit" class="submit-btn" style="color: white;">
                    Entrar
                </button>
            </form>

            <p class="auth-footer">
                Não tem conta? <a href="/cadastro" class="auth-link"
                    >Cadastre-se</a
                >
            </p>
        </div>
    </div>
    <script>
        // Google Login
        const googleBtn = document.getElementById(
            "google-login-btn",
        ) as HTMLButtonElement | null;
        if (googleBtn) {
            googleBtn.addEventListener("click", async () => {
                const originalText = googleBtn.innerHTML;
                googleBtn.disabled = true;
                googleBtn.innerHTML = "Conectando...";

                try {
                    // Sign in with Google requires a CSRF token and a POST to the signin endpoint
                    const csrfRes = await fetch("/api/auth/csrf");
                    const { csrfToken } = await csrfRes.json();

                    const form = document.createElement("form");
                    form.method = "POST";
                    form.action = "/api/auth/signin/google";

                    const csrfInput = document.createElement("input");
                    csrfInput.type = "hidden";
                    csrfInput.name = "csrfToken";
                    csrfInput.value = csrfToken;
                    form.appendChild(csrfInput);

                    const callbackInput = document.createElement("input");
                    callbackInput.type = "hidden";
                    callbackInput.name = "callbackUrl";
                    callbackInput.value = "/dashboard";
                    form.appendChild(callbackInput);

                    document.body.appendChild(form);
                    form.submit();
                } catch (err) {
                    console.error("Google login error:", err);
                    alert("Erro ao iniciar login com Google.");
                    googleBtn.innerHTML = originalText;
                    googleBtn.disabled = false;
                }
            });
        }

        // Credentials Login
        const form = document.querySelector(
            'form[action$="credentials"]',
        ) as HTMLFormElement | null;
        if (form) {
            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const submitBtn = form.querySelector(
                    'button[type="submit"]',
                ) as HTMLButtonElement | null;
                if (!submitBtn) return;

                const originalText = submitBtn.textContent || "";
                submitBtn.textContent = "Entrando...";

                try {
                    const formData = new FormData(form);
                    const email = formData.get("email");
                    const password = formData.get("password");

                    // Get CSRF Token
                    const csrfRes = await fetch("/api/auth/csrf");
                    const { csrfToken } = await csrfRes.json();

                    // Sign In - sending as form-urlencoded is more reliable for Credentials provider
                    const params = new URLSearchParams();
                    params.append("email", email as string);
                    params.append("password", password as string);
                    params.append("csrfToken", csrfToken);
                    params.append("callbackUrl", "/dashboard");
                    params.append("json", "true"); // Request JSON response

                    const res = await fetch("/api/auth/callback/credentials", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/x-www-form-urlencoded",
                        },
                        body: params,
                    });

                    if (res.ok) {
                        // Se o fetch seguiu o redirect automaticamente e parou no dashboard
                        if (res.url && res.url.includes("/dashboard")) {
                            window.location.href = "/dashboard";
                            return;
                        }

                        // Verifica se a resposta é JSON antes de tentar parsear
                        const contentType = res.headers.get("content-type");
                        if (
                            contentType &&
                            contentType.includes("application/json")
                        ) {
                            const data = await res.json();
                            if (data.url) {
                                window.location.href = data.url;
                            } else {
                                window.location.href = "/dashboard";
                            }
                        } else {
                            // Se deu OK mas não é JSON, provavelmente é sucesso (redirect manual ou HTML)
                            window.location.href = "/dashboard";
                        }
                    } else {
                        // Se não deu OK (401, 500, etc)
                        const text = await res.text();
                        console.error("Login falhou:", text);
                        alert("Falha no login. Verifique suas credenciais.");
                        submitBtn.textContent = originalText;
                    }
                } catch (err) {
                    console.error(err);
                    // Se o erro for de JSON parse no "res.json()", pode cair aqui
                    // Mas a lógica acima previne. Se cair aqui é erro de rede mesmo.
                    alert("Erro ao conectar ao servidor.");
                    submitBtn.textContent = originalText;
                }
            });
        }
    </script>
</Layout>
