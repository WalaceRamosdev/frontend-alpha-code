---
import Button from "../ui/Button.astro";
---

<section id="contact">
    <div class="container">
        <div class="cta-card fade-up-contact">
            <div class="cta-content text-center">
                <h2>Não Deixe Dinheiro na Mesa</h2>
                <p>
                    Cada dia sem um site profissional é um cliente que você
                    entrega de bandeja para a concorrência.
                    <br /><strong>Vamos mudar isso agora?</strong>
                </p>
                <div class="actions">
                    <Button
                        href="/planos"
                        variant="primary"
                        size="lg"
                        class="glow-effect pulse-anim"
                    >
                        <span class="btn-content"
                            >Quero Meu Site Profissional</span
                        >
                    </Button>
                </div>
            </div>
            <div class="glow-bg"></div>
        </div>
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const section = document.getElementById("contact");

    if (section) {
        gsap.from(section.querySelectorAll(".fade-up-contact"), {
            scrollTrigger: {
                trigger: section,
                start: "top 80%",
            },
            y: 50,
            scale: 0.95,
            opacity: 0,
            duration: 1,
            ease: "power3.out",
        });
    }
</script>

<style>
    #contact {
        padding: 50px 0 100px;
    }

    @keyframes pulse-soft {
        0% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(220, 38, 38, 0.7);
        }
        70% {
            transform: scale(1.02);
            box-shadow: 0 0 0 10px rgba(220, 38, 38, 0);
        }
        100% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(220, 38, 38, 0);
        }
    }

    /* Target the button component wrapper for animation */
    #contact :global(.pulse-anim) {
        animation: pulse-soft 2s infinite;
    }
    #contact :global(.pulse-anim:hover) {
        animation: none;
        transform: scale(1.05);
    }

    .cta-card {
        background: linear-gradient(
            145deg,
            rgba(20, 20, 20, 0.9),
            rgba(10, 10, 10, 0.95)
        );
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 30px;
        padding: 60px 20px;
        position: relative;
        overflow: hidden;
        text-align: center;
        box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.5);
    }

    .cta-content {
        position: relative;
        z-index: 2;
    }

    .glow-bg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle,
            rgba(138, 28, 38, 0.2) 0%,
            transparent 70%
        );
        z-index: 1;
        pointer-events: none;
    }

    h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        display: inline-block;
        font-weight: 800;
    }

    p {
        font-size: 1.25rem;
        color: var(--color-text-secondary);
        margin-bottom: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.6;
    }

    p strong {
        color: var(--color-text-main);
    }

    @media (max-width: 768px) {
        h2 {
            font-size: 1.8rem;
        }
        .cta-card {
            padding: 40px 10px; /* Reduced side padding */
        }
        /* Ensure button text fits */
        .btn-content {
            white-space: nowrap;
            font-size: 0.95rem; /* Slightly smaller font if needed */
        }
    }
</style>
