<script>
    import { gsap } from "gsap";

    document.addEventListener("DOMContentLoaded", () => {
        const tl = gsap.timeline({
            defaults: { ease: "power3.out", duration: 1 },
        });

        // Hero Text Animations
        tl.fromTo(
            ".hero-text .badge",
            { y: 20, opacity: 0 },
            { y: 0, opacity: 1, duration: 0.8 },
        )
            .fromTo(
                ".hero-text h1",
                { y: 30, opacity: 0 },
                { y: 0, opacity: 1 },
                "-=0.6",
            )
            .fromTo(
                ".hero-text p",
                { y: 30, opacity: 0 },
                { y: 0, opacity: 1 },
                "-=0.8",
            )
            .fromTo(
                ".hero-cta",
                { y: 30, opacity: 0 },
                { y: 0, opacity: 1 },
                "-=0.8",
            )
            .fromTo(
                ".trust-indicator",
                { y: 20, opacity: 0 },
                { y: 0, opacity: 1 },
                "-=0.8",
            );

        // Comparison Animation
        const visualTl = gsap.timeline({ delay: 0.5 });

        visualTl
            .fromTo(
                ".card-before",
                { x: 50, opacity: 0, scale: 0.9 },
                { x: 0, opacity: 1, scale: 1, duration: 1, ease: "power2.out" },
            )
            .fromTo(
                ".transform-arrow",
                { opacity: 0, scale: 0 },
                { opacity: 1, scale: 1, duration: 0.5 },
                "-=0.5",
            )
            .fromTo(
                ".card-after",
                { x: -50, opacity: 0, scale: 1.1 },
                {
                    x: 0,
                    opacity: 1,
                    scale: 1,
                    duration: 1.2,
                    ease: "back.out(1.7)",
                },
                "-=0.3",
            );

        // Mouse Parallax for Orbs
        const orbs = document.querySelectorAll(".orb");
        const heroSection = document.getElementById("hero");

        if (heroSection) {
            heroSection.addEventListener("mousemove", (e) => {
                const x = (e.clientX / window.innerWidth - 0.5) * 20;
                const y = (e.clientY / window.innerHeight - 0.5) * 20;

                orbs.forEach((orb, index) => {
                    const factor = (index + 1) * 2;
                    gsap.to(orb, {
                        x: x * factor,
                        y: y * factor,
                        duration: 1,
                        ease: "power2.out",
                    });
                });
            });
        }
    });
</script>

<style>
    /* Hero Styles */
    #hero {
        position: relative;
        padding: 160px 0 100px;
        min-height: 100vh;
        display: flex;
        align-items: center;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        inset: 0;
        z-index: -1;
        overflow: hidden;
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0.5;
        z-index: 1;
    }

    .orb-1 {
        width: 60vw;
        height: 60vw;
        background: radial-gradient(
            circle,
            rgba(138, 28, 38, 0.4) 0%,
            transparent 70%
        );
        top: -20%;
        right: -10%;
        animation: pulseSlow 8s ease-in-out infinite alternate;
    }

    .orb-2 {
        width: 50vw;
        height: 50vw;
        background: radial-gradient(
            circle,
            rgba(212, 175, 55, 0.15) 0%,
            transparent 60%
        );
        bottom: -10%;
        left: -10%;
        animation: pulseSlow 12s ease-in-out infinite alternate-reverse;
    }

    .grid-overlay {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
            linear-gradient(
                90deg,
                rgba(255, 255, 255, 0.03) 1px,
                transparent 1px
            );
        background-size: 50px 50px;
        opacity: 0.5;
        z-index: 2;
        mask-image: radial-gradient(
            circle at center,
            black 40%,
            transparent 90%
        );
    }

    .hero-container-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        align-items: center;
        position: relative;
        z-index: 10;
    }

    .hero-text h1 {
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        line-height: 1.1;
        font-weight: 800;
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
    }

    .hero-text p {
        font-size: 1.2rem;
        color: var(--color-text-secondary);
        margin-bottom: 2.5rem;
        max-width: 600px;
        line-height: 1.7;
    }

    .hero-cta {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        margin-bottom: 2.5rem;
    }

    .trust-indicator {
        display: flex;
        gap: 10px;
        align-items: center;
        font-size: 0.9rem;
        color: var(--color-text-muted);
    }
    .trust-indicator .stars {
        filter: drop-shadow(0 0 5px rgba(255, 215, 0, 0.5));
    }

    /* Comparison Container */
    .comparison-container {
        position: relative;
        width: 100%;
        max-width: 500px;
        height: 400px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-before,
    .card-after {
        position: absolute;
        width: 280px;
        border-radius: 20px;
        padding: 25px;
        display: flex;
        flex-direction: column;
        backdrop-filter: blur(10px);
        transition: transform 0.4s ease;
    }

    /* Before Card - The "Bad" state */
    .card-before {
        background: rgba(30, 30, 30, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.05);
        left: 0;
        top: 20%;
        z-index: 1;
        transform: rotate(-5deg) scale(0.95);
        filter: grayscale(100%) opacity(0.7);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }

    .card-before .status-badge {
        background: rgba(255, 255, 255, 0.1);
        color: #aaa;
    }

    .card-before h4 {
        color: #888;
        font-size: 1.1rem;
        margin: 15px 0;
    }
    /* After Card - The "Good" state */
    .card-after {
        background: rgba(20, 0, 0, 0.9); /* Dark Red tint */
        border: 1px solid rgba(138, 28, 38, 0.3);
        right: 0;
        bottom: 15%;
        z-index: 3;
        transform: rotate(3deg) scale(1.05);
        box-shadow: 0 20px 50px rgba(138, 28, 38, 0.3);
    }

    .card-after .glow-effect {
        position: absolute;
        inset: 0;
        background: radial-gradient(
            circle at top right,
            rgba(214, 40, 57, 0.2),
            transparent 70%
        );
        pointer-events: none;
    }

    .card-after .status-badge {
        background: var(--color-primary);
        color: white;
        box-shadow: 0 0 15px rgba(214, 40, 57, 0.6);
    }

    .card-after h4 {
        color: white;
        font-size: 1.3rem;
        margin: 15px 0;
        font-weight: 700;
    }

    .status-badge {
        align-self: flex-start;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .icon {
        font-size: 2rem;
    }

    /* Stats Styling */
    .mini-stat {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        color: #666;
        font-size: 0.9rem;
    }

    .stats-grid {
        display: flex;
        gap: 15px;
        margin-top: 15px;
    }

    .stat-box {
        background: rgba(255, 255, 255, 0.05);
        padding: 10px;
        border-radius: 10px;
        flex: 1;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .stat-box .value {
        display: block;
        font-size: 1.2rem;
        font-weight: 800;
        color: var(--color-primary);
    }

    .stat-box .label {
        font-size: 0.75rem;
        color: #ccc;
        text-transform: uppercase;
    }

    /* Decoration */
    .transform-arrow {
        position: absolute;
        background: white;
        color: black;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        z-index: 2;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
        font-size: 1.5rem;
    }

    .path-line {
        stroke: var(--color-primary);
        stroke-width: 3;
        stroke-linecap: round;
        filter: drop-shadow(0 0 5px var(--color-primary));
    }

    .path-dot {
        fill: white;
        filter: drop-shadow(0 0 5px white);
        animation: pulsePoint 2s infinite;
    }

    @keyframes pulsePoint {
        0% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.5);
            opacity: 0.7;
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    /* Hover Effects */
    .comparison-container:hover .card-before {
        transform: rotate(-10deg) scale(0.9) translateX(-20px);
        filter: grayscale(100%) opacity(0.5) blur(2px);
    }

    .comparison-container:hover .card-after {
        transform: rotate(0deg) scale(1.1) translateX(-10px);
        z-index: 10;
    }

    @media (max-width: 968px) {
        .hero-container-grid {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 3rem;
        }
        .hero-text h1 {
            font-size: 3rem;
        }
        .hero-text p {
            margin: 0 auto 2rem;
        }
        .hero-cta {
            justify-content: center;
        }
        .comparison-container {
            height: 350px;
        }
    }
</style>
