<script>
    import { gsap } from "gsap";

    document.addEventListener("DOMContentLoaded", () => {
        const tl = gsap.timeline({
            defaults: { ease: "power3.out", duration: 1 },
        });

        // Hero Text Animations
        tl.fromTo(
            ".hero-text .badge",
            { y: 20, opacity: 0 },
            { y: 0, opacity: 1, duration: 0.8 },
        )
            .fromTo(
                ".hero-text h1",
                { y: 30, opacity: 0 },
                { y: 0, opacity: 1 },
                "-=0.6",
            )
            .fromTo(
                ".hero-text p",
                { y: 30, opacity: 0 },
                { y: 0, opacity: 1 },
                "-=0.8",
            )
            .fromTo(
                ".hero-cta",
                { y: 30, opacity: 0 },
                { y: 0, opacity: 1 },
                "-=0.8",
            )
            .fromTo(
                ".trust-indicator",
                { y: 20, opacity: 0 },
                { y: 0, opacity: 1 },
                "-=0.8",
            );

        // Carousel Animation
        const slides = document.querySelectorAll(".carousel-slide");
        let currentSlide = 0;
        const totalSlides = slides.length;
        const autoplayInterval = 3000; // Cada imagem fica 3s no total (descontando a animação, sobra >2s de exibição)
        const animDuration = 0.5; // Transição snappier e premium

        function goToSlide(index: number) {
            if (slides.length === 0 || index === currentSlide) return;

            const prevSlide = slides[currentSlide];
            const nextSlide = slides[index];
            const nextDesktop = nextSlide.querySelector(".desktop-frame");
            const nextMobile = nextSlide.querySelector(".mobile-frame");

            // Efeito Inédito: Revelação por Expansão Circular (Iris) + Profundidade
            gsap.set(nextSlide, {
                opacity: 1,
                visibility: "visible",
                zIndex: 5,
                clipPath: "circle(0% at 50% 50%)",
                scale: 1.1,
                filter: "brightness(1.5) blur(10px)",
            });

            gsap.set(nextDesktop, { y: 40, opacity: 0, filter: "blur(10px)" });

            const nextInfo = nextSlide.querySelector(".slide-info");
            const isMobile = window.innerWidth <= 968;
            gsap.set(nextInfo, {
                y: -30,
                xPercent: isMobile ? -50 : 0,
                opacity: 0,
                filter: "blur(10px)",
            });

            // Animação Impactante para o Celular: Entrada com Rotação 3D Distorcida
            const isLeft = nextMobile?.classList.contains("mobile-left");
            gsap.set(nextMobile, {
                y: 100,
                x: isLeft ? -100 : 100,
                rotationZ: isLeft ? -15 : 15,
                rotationY: isLeft ? -45 : 45,
                opacity: 0,
                scale: 0.5,
                filter: "blur(10px)",
            });

            const tl = gsap.timeline({
                onComplete: () => {
                    prevSlide.classList.remove("active");
                    nextSlide.classList.add("active");
                    gsap.set(prevSlide, {
                        opacity: 0,
                        visibility: "hidden",
                        zIndex: 1,
                        scale: 1,
                        filter: "none",
                    });
                    currentSlide = index;
                },
            });

            // Saída com efeito de "zoom out" e desfoque
            tl.to(prevSlide, {
                opacity: 0,
                scale: 0.9,
                filter: "blur(20px)",
                duration: animDuration,
                ease: "power2.in",
            });

            // Entrada triunfal com expansão circular e correção de brilho
            tl.to(
                nextSlide,
                {
                    clipPath: "circle(150% at 50% 50%)",
                    scale: 1,
                    filter: "brightness(1) blur(0px)",
                    duration: animDuration + 0.4,
                    ease: "expo.inOut",
                },
                "-=0.3",
            )
                .to(
                    nextDesktop,
                    {
                        y: 0,
                        opacity: 1,
                        filter: "blur(0px)",
                        duration: 0.8,
                        ease: "back.out(1.2)",
                    },
                    "-=0.6",
                )
                .to(
                    nextMobile,
                    {
                        y: 0,
                        x: 0,
                        rotationZ: 0,
                        rotationY: 0,
                        opacity: 1,
                        scale: 1,
                        filter: "blur(0px)",
                        duration: 1.2,
                        ease: "elastic.out(1, 0.75)", // Efeito de mola/impacto
                    },
                    "-=0.9",
                )
                .to(
                    nextInfo,
                    {
                        y: 0,
                        xPercent: isMobile ? -50 : 0,
                        opacity: 1,
                        filter: "blur(0px)",
                        duration: 0.8,
                        ease: "power3.out",
                    },
                    "-=1.0",
                );
        }

        // Animação Contínua: Celulares Flutuando (Subutil da sensação de vida)
        gsap.to(".mobile-frame", {
            y: "-=20",
            duration: 3,
            repeat: -1,
            yoyo: true,
            ease: "sine.inOut",
            stagger: {
                each: 0.4,
                repeat: -1,
                yoyo: true,
            },
        });

        function nextSlide() {
            const next = (currentSlide + 1) % totalSlides;
            goToSlide(next);
        }

        // Auto-advance slides
        let autoplayTimer = setInterval(nextSlide, autoplayInterval);

        // Pause on hover
        const carousel = document.querySelector(".projects-carousel");
        if (carousel) {
            carousel.addEventListener("mouseenter", () => {
                clearInterval(autoplayTimer);
            });
            carousel.addEventListener("mouseleave", () => {
                autoplayTimer = setInterval(nextSlide, autoplayInterval);
            });
        }

        // Initial carousel animation
        const carouselTl = gsap.timeline({ delay: 0.5 });
        carouselTl.fromTo(
            ".projects-carousel",
            { opacity: 0, y: 30, scale: 0.95 },
            { opacity: 1, y: 0, scale: 1, duration: 1.2, ease: "power3.out" },
        );

        // Mouse Parallax for Orbs
        const orbs = document.querySelectorAll(".orb");
        const heroSection = document.getElementById("hero");

        if (heroSection) {
            heroSection.addEventListener("mousemove", (e) => {
                const x = (e.clientX / window.innerWidth - 0.5) * 20;
                const y = (e.clientY / window.innerHeight - 0.5) * 20;

                orbs.forEach((orb, index) => {
                    const factor = (index + 1) * 2;
                    gsap.to(orb, {
                        x: x * factor,
                        y: y * factor,
                        duration: 1,
                        ease: "power2.out",
                    });
                });
            });
        }
    });
</script>

<style>
    /* Hero Styles */
    #hero {
        position: relative;
        padding: 160px 0 100px;
        min-height: 100vh;
        display: flex;
        align-items: center;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        inset: 0;
        z-index: -1;
        overflow: hidden;
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0.5;
        z-index: 1;
    }

    .orb-1 {
        width: 60vw;
        height: 60vw;
        background: radial-gradient(
            circle,
            rgba(138, 28, 38, 0.4) 0%,
            transparent 70%
        );
        top: -20%;
        right: -10%;
        animation: pulseSlow 8s ease-in-out infinite alternate;
    }

    .orb-2 {
        width: 50vw;
        height: 50vw;
        background: radial-gradient(
            circle,
            rgba(212, 175, 55, 0.15) 0%,
            transparent 60%
        );
        bottom: -10%;
        left: -10%;
        animation: pulseSlow 12s ease-in-out infinite alternate-reverse;
    }

    .grid-overlay {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
            linear-gradient(
                90deg,
                rgba(255, 255, 255, 0.03) 1px,
                transparent 1px
            );
        background-size: 50px 50px;
        opacity: 0.5;
        z-index: 2;
        mask-image: radial-gradient(
            circle at center,
            black 40%,
            transparent 90%
        );
    }

    .hero-container-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        align-items: flex-start; /* Alinhado ao topo */
        position: relative;
        z-index: 10;
    }

    .hero-visual {
        margin-top: 5rem; /* Ajustado para alinhar com o h1 (ignorando o badge) */
    }

    .hero-text .badge {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 10px 24px;
        background: rgba(138, 28, 38, 0.1);
        border: 1px solid rgba(138, 28, 38, 0.3);
        border-radius: 100px;
        color: #fff;
        font-size: 0.85rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 0; /* Margin controlada pelo container */
        box-shadow: 0 0 30px rgba(138, 28, 38, 0.2);
        backdrop-filter: blur(10px);
        animation: badgePulse 4s infinite ease-in-out;
    }

    .badge-dot {
        width: 8px;
        height: 8px;
        background: var(--color-primary);
        border-radius: 50%;
        position: relative;
        box-shadow: 0 0 10px var(--color-primary);
    }

    .badge-dot::after {
        content: "";
        position: absolute;
        inset: -4px;
        border-radius: 50%;
        border: 1px solid var(--color-primary);
        animation: dotRipple 2s infinite;
    }

    @keyframes dotRipple {
        0% {
            transform: scale(1);
            opacity: 1;
        }
        100% {
            transform: scale(3);
            opacity: 0;
        }
    }

    @keyframes badgePulse {
        0%,
        100% {
            border-color: rgba(138, 28, 38, 0.3);
            box-shadow: 0 0 30px rgba(138, 28, 38, 0.2);
        }
        50% {
            border-color: rgba(214, 40, 57, 0.6);
            box-shadow: 0 0 45px rgba(214, 40, 57, 0.4);
            transform: translateY(-2px);
        }
    }

    .badges-container {
        display: flex;
        gap: 15px;
        margin-bottom: 2.5rem;
        flex-wrap: wrap;
    }

    .badge.international {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.2);
        box-shadow: none;
        animation: none;
        transition: 0.3s;
    }

    .badge.international:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: #fff;
        transform: translateY(-2px);
    }

    .flags-only {
        font-size: 1.1rem;
        letter-spacing: 2px;
        opacity: 0.9;
        filter: grayscale(20%);
        transition: 0.3s;
    }

    .badge.international:hover .flags-only {
        filter: grayscale(0%);
        opacity: 1;
    }

    .hero-text h1 {
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        line-height: 1.1;
        font-weight: 800;
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
    }

    .hero-text p {
        font-size: 1.2rem;
        color: var(--color-text-secondary);
        margin-bottom: 2.5rem;
        max-width: 600px;
        line-height: 1.7;
    }

    .hero-cta {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        margin-bottom: 2.5rem;
    }

    .client-btn {
        background: rgba(255, 255, 255, 0.03) !important;
        border-color: rgba(255, 255, 255, 0.1) !important;
        opacity: 0.8;
    }

    .client-btn:hover {
        background: rgba(255, 255, 255, 0.08) !important;
        border-color: rgba(255, 255, 255, 0.3) !important;
        opacity: 1;
    }

    .trust-indicator {
        display: flex;
        flex-direction: column;
        gap: 12px;
        align-items: flex-start;
        margin-top: 1rem;
    }

    .stars-glimmer {
        display: flex;
        gap: 5px;
        margin-bottom: 8px;
    }

    .star {
        color: #fff;
        font-size: 1.4rem;
        filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.4));
        animation: starTwinkle 3s infinite ease-in-out;
    }

    .star:nth-child(2) {
        animation-delay: 0.2s;
    }
    .star:nth-child(3) {
        animation-delay: 0.4s;
    }
    .star:nth-child(4) {
        animation-delay: 0.6s;
    }
    .star:nth-child(5) {
        animation-delay: 0.8s;
    }

    @keyframes starTwinkle {
        0%,
        100% {
            transform: scale(1);
            filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.4));
        }
        50% {
            transform: scale(1.1);
            filter: drop-shadow(0 0 15px rgba(255, 255, 255, 0.8));
        }
    }

    .partner-badge {
        display: none;
    }

    .client-avatars {
        display: flex;
        align-items: center;
        margin-top: -8px;
    }

    .avatar-stack {
        display: flex;
        align-items: center;
        padding-left: 0;
    }

    .avatar-stack img,
    .avatar-stack .logo-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        border: 2px solid #0a0a0a;
        margin-left: -12px;
        background: #1a1a1a;
        object-fit: cover;
        transition: transform 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

    .avatar-stack img:first-child,
    .avatar-stack .logo-avatar:first-child {
        margin-left: 0;
    }

    .avatar-stack .logo-avatar {
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-primary);
        padding: 7px;
    }

    .avatar-stack img:hover,
    .avatar-stack .logo-avatar:hover {
        transform: translateY(-5px) scale(1.1);
        z-index: 10;
        border-color: var(--color-primary);
    }

    .trust-text {
        font-size: 0.95rem;
        color: rgba(255, 255, 255, 0.6);
        letter-spacing: 0.5px;
        line-height: 1.4;
    }

    .trust-text strong {
        color: #fff;
        font-weight: 700;
    }

    @media (max-width: 968px) {
        .trust-indicator {
            align-items: center;
            text-align: center;
        }
    }

    /* Projects Carousel */
    .projects-carousel {
        position: relative;
        width: 100%;
        max-width: 1000px; /* Aumentado de 800px para 1000px */
        margin: 0 auto;
        perspective: 1200px;
    }

    .carousel-track {
        position: relative;
        width: 100%;
        aspect-ratio: 16 / 10; /* Ajustado para visualização mais horizontal e larga */
        background: transparent;
        border-radius: 32px;
        overflow: visible; /* Deixar as imagens flutuarem melhor */
        transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    }

    /* Reflection Effect refined */
    .projects-carousel::after {
        content: "";
        position: absolute;
        top: 104%;
        left: 5%;
        width: 90%;
        height: 20%;
        background: linear-gradient(
            to bottom,
            rgba(255, 255, 255, 0.05),
            transparent
        );
        transform: scaleY(-1);
        mask-image: linear-gradient(to top, transparent 0%, rgba(0, 0, 0, 0.2));
        -webkit-mask-image: linear-gradient(
            to top,
            transparent 0%,
            rgba(0, 0, 0, 0.2)
        );
        pointer-events: none;
        z-index: -1;
        opacity: 0.2;
    }

    .carousel-slide {
        position: absolute;
        inset: 0;
        opacity: 0;
        visibility: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        perspective: 1000px;
    }

    .carousel-slide.active {
        opacity: 1;
        visibility: visible;
        z-index: 2;
    }

    /* Mockup Composition */
    .mockup-compo {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0; /* Removido padding para ganhar espaço */
    }

    .desktop-frame {
        width: 95%; /* Aumentado de 85% */
        height: auto;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 40px 80px rgba(0, 0, 0, 0.6);
        transform: perspective(1000px) rotateY(-5deg);
        transition: transform 0.8s ease;
    }

    .mobile-frame {
        position: absolute;
        width: 28%; /* Aumentado de 22% */
        right: -2%;
        bottom: 5%;
        border-radius: 20px;
