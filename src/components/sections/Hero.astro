---
import Button from "../ui/Button.astro";
---

<section id="hero">
    <div class="hero-background">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
        <div class="grid-overlay"></div>
    </div>

    <div class="container hero-container-grid">
        <div class="hero-text">
            <div class="badge fade-up">
                <span class="badge-dot"></span>
                Especialistas em Autoridade Digital
            </div>
            <h1 class="fade-up">
                Seu Negócio Precisa de um <br />
                <span class="text-gradient">Site que Vende.</span>
            </h1>
            <p class="fade-up">
                Médicos, advogados e empresas perdem clientes todos os dias por
                não terem um site profissional. Transformamos sua presença
                online em uma máquina de vendas confiável e de alto padrão.
                <strong>Não seja invisível no Google.</strong>
            </p>
            <div class="hero-cta fade-up">
                <Button
                    href="#contact"
                    size="lg"
                    variant="primary"
                    class="glow-effect"
                >
                    <span class="btn-content">Quero Vender Mais</span>
                </Button>
                <Button href="#projects" variant="outline" size="lg">
                    Ver Portfólio
                </Button>
            </div>
            <div class="trust-indicator fade-up">
                <div class="stars-glimmer">
                    <span class="star">★</span>
                    <span class="star">★</span>
                    <span class="star">★</span>
                    <span class="star">★</span>
                    <span class="star">★</span>
                </div>
                <span class="trust-text">
                    Mais de <strong class="text-white">531 profissionais</strong
                    > posicionados no digital.<br /><strong
                        >SEJA VOCÊ O PRÓXIMO !</strong
                    >
                </span>
            </div>
        </div>

        <div class="hero-visual fade-in">
            <div class="projects-carousel">
                <div class="carousel-track">
                    <!-- Slide 1: Psicóloga -->
                    <div class="carousel-slide active">
                        <div class="mockup-compo">
                            <div class="desktop-frame">
                                <img
                                    src="/assets/projects/psicologa-desktop.png"
                                    alt="Site Psicóloga Desktop"
                                />
                            </div>
                            <div class="mobile-frame">
                                <img
                                    src="/assets/projects/psicologa-mobile.png"
                                    alt="Site Psicóloga Mobile"
                                />
                            </div>
                        </div>
                    </div>
                    <!-- Slide 2: Advocacia -->
                    <div class="carousel-slide">
                        <div class="mockup-compo">
                            <div class="desktop-frame">
                                <img
                                    src="/assets/projects/advocacia-desktop.png"
                                    alt="Site Advocacia Desktop"
                                />
                            </div>
                            <div class="mobile-frame">
                                <img
                                    src="/assets/projects/advocacia-mobile.png"
                                    alt="Site Advocacia Mobile"
                                />
                            </div>
                        </div>
                    </div>
                    <!-- Slide 3: Professor -->
                    <div class="carousel-slide">
                        <div class="mockup-compo">
                            <div class="desktop-frame">
                                <img
                                    src="/assets/projects/professor-desktop.png"
                                    alt="Site Professor Desktop"
                                />
                            </div>
                            <div class="mobile-frame">
                                <img
                                    src="/assets/projects/professor-mobile.png"
                                    alt="Site Professor Mobile"
                                />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="carousel-glow"></div>
            </div>
        </div>
    </div>
</section>

<script>
    import { gsap } from "gsap";

    document.addEventListener("DOMContentLoaded", () => {
        const tl = gsap.timeline({
            defaults: { ease: "power3.out", duration: 1 },
        });

        // Hero Text Animations
        tl.fromTo(
            ".hero-text .badge",
            { y: 20, opacity: 0 },
            { y: 0, opacity: 1, duration: 0.8 },
        )
            .fromTo(
                ".hero-text h1",
                { y: 30, opacity: 0 },
                { y: 0, opacity: 1 },
                "-=0.6",
            )
            .fromTo(
                ".hero-text p",
                { y: 30, opacity: 0 },
                { y: 0, opacity: 1 },
                "-=0.8",
            )
            .fromTo(
                ".hero-cta",
                { y: 30, opacity: 0 },
                { y: 0, opacity: 1 },
                "-=0.8",
            )
            .fromTo(
                ".trust-indicator",
                { y: 20, opacity: 0 },
                { y: 0, opacity: 1 },
                "-=0.8",
            );

        // Carousel Animation
        const slides = document.querySelectorAll(".carousel-slide");
        let currentSlide = 0;
        const totalSlides = slides.length;
        const autoplayInterval = 2500; // Troca rápida a cada 2.5s conforme pedido

        function goToSlide(index: number) {
            if (slides.length === 0) return;

            // Remove active from current
            slides[currentSlide].classList.remove("active");

            // Update current slide
            currentSlide = index;

            // Add active to new slide
            slides[currentSlide].classList.add("active");

            // Animate with GSAP
            gsap.fromTo(
                slides[currentSlide],
                { opacity: 0, scale: 0.95 },
                { opacity: 1, scale: 1, duration: 0.8, ease: "power2.out" },
            );
        }

        function nextSlide() {
            const next = (currentSlide + 1) % totalSlides;
            goToSlide(next);
        }

        // Auto-advance slides
        let autoplayTimer = setInterval(nextSlide, autoplayInterval);

        // Pause on hover
        const carousel = document.querySelector(".projects-carousel");
        if (carousel) {
            carousel.addEventListener("mouseenter", () => {
                clearInterval(autoplayTimer);
            });
            carousel.addEventListener("mouseleave", () => {
                autoplayTimer = setInterval(nextSlide, autoplayInterval);
            });
        }

        // Initial carousel animation
        const carouselTl = gsap.timeline({ delay: 0.5 });
        carouselTl.fromTo(
            ".projects-carousel",
            { opacity: 0, y: 30, scale: 0.95 },
            { opacity: 1, y: 0, scale: 1, duration: 1.2, ease: "power3.out" },
        );

        // Mouse Parallax for Orbs
        const orbs = document.querySelectorAll(".orb");
        const heroSection = document.getElementById("hero");

        if (heroSection) {
            heroSection.addEventListener("mousemove", (e) => {
                const x = (e.clientX / window.innerWidth - 0.5) * 20;
                const y = (e.clientY / window.innerHeight - 0.5) * 20;

                orbs.forEach((orb, index) => {
                    const factor = (index + 1) * 2;
                    gsap.to(orb, {
                        x: x * factor,
                        y: y * factor,
                        duration: 1,
                        ease: "power2.out",
                    });
                });
            });
        }
    });
</script>

<style>
    /* Hero Styles */
    #hero {
        position: relative;
        padding: 160px 0 100px;
        min-height: 100vh;
        display: flex;
        align-items: center;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        inset: 0;
        z-index: -1;
        overflow: hidden;
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0.5;
        z-index: 1;
    }

    .orb-1 {
        width: 60vw;
        height: 60vw;
        background: radial-gradient(
            circle,
            rgba(138, 28, 38, 0.4) 0%,
            transparent 70%
        );
        top: -20%;
        right: -10%;
        animation: pulseSlow 8s ease-in-out infinite alternate;
    }

    .orb-2 {
        width: 50vw;
        height: 50vw;
        background: radial-gradient(
            circle,
            rgba(212, 175, 55, 0.15) 0%,
            transparent 60%
        );
        bottom: -10%;
        left: -10%;
        animation: pulseSlow 12s ease-in-out infinite alternate-reverse;
    }

    .grid-overlay {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
            linear-gradient(
                90deg,
                rgba(255, 255, 255, 0.03) 1px,
                transparent 1px
            );
        background-size: 50px 50px;
        opacity: 0.5;
        z-index: 2;
        mask-image: radial-gradient(
            circle at center,
            black 40%,
            transparent 90%
        );
    }

    .hero-container-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        align-items: center;
        position: relative;
        z-index: 10;
    }

    .hero-text .badge {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 10px 24px;
        background: rgba(138, 28, 38, 0.1);
        border: 1px solid rgba(138, 28, 38, 0.3);
        border-radius: 100px;
        color: #fff;
        font-size: 0.85rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 0; /* Margin controlada pelo container */
        box-shadow: 0 0 30px rgba(138, 28, 38, 0.2);
        backdrop-filter: blur(10px);
        animation: badgePulse 4s infinite ease-in-out;
    }

    .badge-dot {
        width: 8px;
        height: 8px;
        background: var(--color-primary);
        border-radius: 50%;
        position: relative;
        box-shadow: 0 0 10px var(--color-primary);
    }

    .badge-dot::after {
        content: "";
        position: absolute;
        inset: -4px;
        border-radius: 50%;
        border: 1px solid var(--color-primary);
        animation: dotRipple 2s infinite;
    }

    @keyframes dotRipple {
        0% {
            transform: scale(1);
            opacity: 1;
        }
        100% {
            transform: scale(3);
            opacity: 0;
        }
    }

    @keyframes badgePulse {
        0%,
        100% {
            border-color: rgba(138, 28, 38, 0.3);
            box-shadow: 0 0 30px rgba(138, 28, 38, 0.2);
        }
        50% {
            border-color: rgba(214, 40, 57, 0.6);
            box-shadow: 0 0 45px rgba(214, 40, 57, 0.4);
            transform: translateY(-2px);
        }
    }

    .badges-container {
        display: flex;
        gap: 15px;
        margin-bottom: 2.5rem;
        flex-wrap: wrap;
    }

    .badge.international {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.2);
        box-shadow: none;
        animation: none;
        transition: 0.3s;
    }

    .badge.international:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: #fff;
        transform: translateY(-2px);
    }

    .flags-only {
        font-size: 1.1rem;
        letter-spacing: 2px;
        opacity: 0.9;
        filter: grayscale(20%);
        transition: 0.3s;
    }

    .badge.international:hover .flags-only {
        filter: grayscale(0%);
        opacity: 1;
    }

    .hero-text h1 {
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        line-height: 1.1;
        font-weight: 800;
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
    }

    .hero-text p {
        font-size: 1.2rem;
        color: var(--color-text-secondary);
        margin-bottom: 2.5rem;
        max-width: 600px;
        line-height: 1.7;
    }

    .hero-cta {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        margin-bottom: 2.5rem;
    }

    .client-btn {
        background: rgba(255, 255, 255, 0.03) !important;
        border-color: rgba(255, 255, 255, 0.1) !important;
        opacity: 0.8;
    }

    .client-btn:hover {
        background: rgba(255, 255, 255, 0.08) !important;
        border-color: rgba(255, 255, 255, 0.3) !important;
        opacity: 1;
    }

    .trust-indicator {
        display: flex;
        flex-direction: column;
        gap: 12px;
        align-items: flex-start;
        margin-top: 1rem;
    }

    .stars-glimmer {
        display: flex;
        gap: 5px;
    }

    .star {
        color: #ffb800; /* Richer Gold */
        font-size: 1.4rem;
        filter: drop-shadow(0 0 8px rgba(255, 184, 0, 0.4));
        animation: starTwinkle 3s infinite ease-in-out;
    }

    .star:nth-child(2) {
        animation-delay: 0.2s;
    }
    .star:nth-child(3) {
        animation-delay: 0.4s;
    }
    .star:nth-child(4) {
        animation-delay: 0.6s;
    }
    .star:nth-child(5) {
        animation-delay: 0.8s;
    }

    @keyframes starTwinkle {
        0%,
        100% {
            transform: scale(1);
            filter: drop-shadow(0 0 8px rgba(255, 184, 0, 0.4));
        }
        50% {
            transform: scale(1.1);
            filter: drop-shadow(0 0 15px rgba(255, 184, 0, 0.8));
        }
    }

    .trust-text {
        font-size: 0.95rem;
        color: rgba(255, 255, 255, 0.6);
        letter-spacing: 0.5px;
    }

    .trust-text strong {
        color: #fff;
        font-weight: 700;
    }

    @media (max-width: 968px) {
        .trust-indicator {
            align-items: center;
        }
    }

    /* Projects Carousel */
    .projects-carousel {
        position: relative;
        width: 100%;
        max-width: 1000px; /* Aumentado de 800px para 1000px */
        margin: 0 auto;
        perspective: 1200px;
    }

    .carousel-track {
        position: relative;
        width: 100%;
        aspect-ratio: 16 / 10; /* Ajustado para visualização mais horizontal e larga */
        background: transparent;
        border-radius: 32px;
        overflow: visible; /* Deixar as imagens flutuarem melhor */
        transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    }

    /* Reflection Effect refined */
    .projects-carousel::after {
        content: "";
        position: absolute;
        top: 104%;
        left: 5%;
        width: 90%;
        height: 20%;
        background: linear-gradient(
            to bottom,
            rgba(255, 255, 255, 0.05),
            transparent
        );
        transform: scaleY(-1);
        mask-image: linear-gradient(to top, transparent 0%, rgba(0, 0, 0, 0.2));
        -webkit-mask-image: linear-gradient(
            to top,
            transparent 0%,
            rgba(0, 0, 0, 0.2)
        );
        pointer-events: none;
        z-index: -1;
        opacity: 0.2;
    }

    .carousel-slide {
        position: absolute;
        inset: 0;
        opacity: 0;
        visibility: hidden;
        transition:
            opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1),
            visibility 0.8s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .carousel-slide.active {
        opacity: 1;
        visibility: visible;
        z-index: 2;
    }

    /* Mockup Composition */
    .mockup-compo {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0; /* Removido padding para ganhar espaço */
    }

    .desktop-frame {
        width: 95%; /* Aumentado de 85% */
        height: auto;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 40px 80px rgba(0, 0, 0, 0.6);
        transform: perspective(1000px) rotateY(-5deg);
        transition: transform 0.8s ease;
    }

    .mobile-frame {
        position: absolute;
        width: 28%; /* Aumentado de 22% */
        right: -2%;
        bottom: 5%;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.7);
        border: 4px solid #1a1a1a;
        transform: perspective(1000px) rotateY(10deg) translateZ(50px);
        transition: transform 0.8s ease;
    }

    .carousel-slide.active .desktop-frame {
        transform: perspective(1000px) rotateY(0deg);
    }

    .carousel-slide.active .mobile-frame {
        transform: perspective(1000px) rotateY(0deg) translateZ(60px);
    }

    .mockup-compo img {
        width: 100%;
        height: auto;
        display: block;
    }

    .carousel-indicators {
        display: none;
    }

    .carousel-glow {
        position: absolute;
        inset: -20%;
        background: radial-gradient(
            circle at center,
            rgba(138, 28, 38, 0.1) 0%,
            transparent 70%
        );
        pointer-events: none;
        z-index: -1;
    }

    /* Hover effect */
    .projects-carousel:hover .desktop-frame {
        transform: scale(1.02);
    }

    @media (max-width: 968px) {
        .projects-carousel {
            max-width: 100%;
        }
        .carousel-track {
            aspect-ratio: 1 / 1.2;
        }
        .desktop-frame {
            width: 95%;
        }
        .mobile-frame {
            width: 30%;
            right: 0;
            bottom: 5%;
        }
    }

    @media (max-width: 480px) {
        .carousel-track {
            aspect-ratio: 1 / 1.4;
        }
        .mobile-frame {
            width: 45%;
            bottom: 2%;
        }
    }
</style>
