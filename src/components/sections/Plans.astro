---
import Button from "../ui/Button.astro";
import Card from "../ui/Card.astro";
---

<section id="plans" class="bg-alt">
    <div class="container">
        <div class="section-header">
            <h2>Investimento Inteligente</h2>
            <p>Escolha o plano ideal para escalar seu faturamento.</p>
        </div>

        <div class="pricing-grid">
            <!-- Plan 1 -->
            <Card variant="price" class="plan-regular">
                <div class="price-header">
                    <h3>Página Simples</h3>
                    <div class="price"><small>R$</small> 247</div>
                    <p class="subtitle">Entrada Essencial</p>
                </div>
                <!-- Features removed for homepage as requested -->
                <div class="action-btn">
                    <Button
                        href="/pedido?plan=simples"
                        variant="outline"
                        class="w-full">Selecionar</Button
                    >
                </div>
            </Card>

            <!-- Plan 2 (Featured) -->
            <Card variant="price" class="featured">
                <div class="badge-gold">Mais Vendido</div>
                <div class="price-header">
                    <h3>Página Completa</h3>
                    <div class="price text-primary"><small>R$</small> 399</div>
                    <p class="subtitle">
                        Para Profissionais que querem Autoridade
                    </p>
                </div>
                <!-- Features removed for homepage as requested -->
                <div class="action-btn">
                    <Button
                        href="/pedido?plan=completa"
                        variant="primary"
                        class="w-full btn-glow">Quero este Plano</Button
                    >
                </div>
            </Card>

            <!-- Plan 3 -->
            <Card variant="price" class="plan-regular">
                <div class="price-header">
                    <h3>Página Premium</h3>
                    <div class="price"><small>R$</small> 647</div>
                    <p class="subtitle">Solução Definitiva</p>
                </div>
                <!-- Features removed for homepage as requested -->
                <div class="action-btn">
                    <Button
                        href="/pedido?plan=premium"
                        variant="outline"
                        class="w-full">Selecionar</Button
                    >
                </div>
            </Card>
        </div>
        <div class="pricing-footer">
            <p>* Pagamento único. Sem mensalidades surpresa.</p>
            <p class="maintenance-note">
                Manutenção opcional disponível por R$ 100/mês.
            </p>
        </div>
        <div class="compare-cta">
            <Button href="/planos" variant="outline" class="btn-large"
                >Ver Comparativo Detalhado <span class="arrow">→</span></Button
            >
        </div>
    </div>
</section>

<style>
    #plans {
        padding: 120px 0;
        position: relative;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-header h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .section-header p {
        font-size: 1.1rem;
        color: var(--color-text-light);
    }

    .pricing-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        align-items: flex-start;
        position: relative;
        z-index: 2;
        justify-content: center; /* Ensure centered if single item */
    }

    /* Global targeting for Card component root elements */
    #plans :global(.price-card) {
        padding: 2rem 1.5rem !important; /* Compact padding */
        display: flex;
        flex-direction: column;
        height: auto; /* Allow shrinking */
        box-sizing: border-box;
    }

    .price-header {
        margin-bottom: 30px;
        text-align: center;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 20px;
    }

    .price-header h3 {
        font-size: 1.2rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: var(--color-text-light);
        margin-bottom: 15px;
    }

    .price {
        font-size: 3.5rem;
        font-weight: 800;
        color: var(--color-text-main);
        line-height: 1;
        margin-bottom: 10px;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        gap: 5px;
    }

    .price small {
        font-size: 1.2rem;
        margin-top: 5px;
        color: var(--color-text-light);
    }

    .subtitle {
        font-size: 0.95rem;
        color: var(--color-text-light);
        font-style: italic;
    }

    .features {
        text-align: left;
        margin-bottom: 35px;
        flex-grow: 1;
        padding: 0 10px;
    }

    .features li {
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 0.95rem;
        color: var(--color-text-main);
    }

    .check {
        color: var(--color-primary);
        font-weight: bold;
        font-size: 1.1rem;
    }

    .badge-gold {
        position: absolute;
        top: -15px;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(135deg, #cfaa34, #f8e698);
        color: #333;
        padding: 6px 20px;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 5px 15px rgba(207, 170, 52, 0.4);
        z-index: 10;
        white-space: nowrap;
    }

    /* Featured Card Styling - PRIMARY COLOR */
    #plans :global(.featured) {
        border: none;
        position: relative;
        transform: scale(1.05);
        z-index: 5;
        background: var(--color-primary) !important; /* Primary Red */
        background: var(--gradient-primary) !important; /* Gradient Red */
        color: #ffffff !important;
        box-shadow: 0 10px 40px rgba(138, 28, 38, 0.4);
        overflow: visible !important; /* Fix badge clipping */
    }

    /* Force all text inside featured to be white */
    #plans :global(.featured h3),
    #plans :global(.featured p),
    #plans :global(.featured .price),
    #plans :global(.featured small),
    #plans :global(.featured li),
    #plans :global(.featured span),
    #plans :global(.featured .check) {
        color: #ffffff !important;
    }

    #plans :global(.featured .price-header) {
        border-bottom-color: rgba(255, 255, 255, 0.3) !important;
    }

    /* Remove the gold/border after effect since we are solid background now if desired, 
       or keep it as a subtle effect. Let's remove the simulated border for clean look */
    #plans :global(.featured::after) {
        display: none;
    }

    .action-btn {
        margin-top: 2rem;
        padding-bottom: 0.5rem;
        display: flex;
        justify-content: center; /* Flex centering */
        width: 100%;
    }

    .w-full {
        width: auto !important; /* Let content dictate width */
        min-width: 200px; /* But keep a minimum */
        padding-left: 2rem;
        padding-right: 2rem;
    }

    /* Featured button specific style if needed to contrast with red background */
    #plans :global(.featured .btn-primary) {
        background: #0a0a0a !important; /* Dark/Black background */
        color: #ffffff !important; /* White text */
        border: 1px solid rgba(255, 255, 255, 0.2) !important;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2) !important;
    }
    #plans :global(.featured .btn-primary:hover) {
        background: #000000 !important;
        transform: translateY(-2px);
        border-color: #ffffff !important;
    }

    .btn-glow {
        box-shadow: 0 0 20px rgba(214, 40, 57, 0.4);
    }

    .pricing-footer {
        text-align: center !important;
        margin: 40px auto 0;
        max-width: 800px;
        color: var(--color-text-light);
        font-size: 0.9rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5px;
    }

    .compare-cta {
        text-align: center;
        margin-top: 30px;
    }

    .btn-large {
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
        border: 1px solid var(--color-primary);
        transition: all 0.3s ease;
    }

    .btn-large:hover {
        background-color: var(--color-primary);
        color: white;
        box-shadow: 0 0 25px rgba(214, 40, 57, 0.4);
    }

    .arrow {
        display: inline-block;
        transition: transform 0.3s;
        margin-left: 8px;
    }

    /* Responsive */
    @media (max-width: 768px) {
        #plans :global(.price-card) {
            padding: 2rem 1.5rem 3rem 1.5rem !important;
        }
        .price {
            font-size: 3rem;
        }
    }
</style>
