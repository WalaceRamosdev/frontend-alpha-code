---
import Button from "../ui/Button.astro";
import Card from "../ui/Card.astro";
---

<section id="plans" class="bg-alt">
    <div class="container">
        <div class="section-header">
            <h2 class="fade-up-plans">
                Investimento <span class="text-primary">Inteligente</span>
            </h2>
            <p class="fade-up-plans delay-1 section-desc">
                Escolha o plano ideal para escalar seu faturamento.
            </p>
        </div>

        <div class="pricing-grid">
            <!-- Plan 1 -->
            <Card variant="price" class="plan-regular plan-card-anim">
                <div class="price-header">
                    <h3>Página Simples</h3>
                    <div class="price"><small>R$</small> 347</div>
                    <p class="subtitle">Entrada Essencial</p>
                </div>
                <!-- Features removed for homepage as requested -->
                <div class="action-btn">
                    <Button
                        href="/pedido?plan=simples"
                        variant="outline"
                        class="w-full">COMEÇAR AGORA</Button
                    >
                </div>
            </Card>

            <!-- Plan 2 (Featured) -->
            <Card variant="price" class="featured plan-card-anim">
                <div class="badge-gold">MAIS PEDIDO</div>
                <div class="price-header">
                    <h3>Página Completa</h3>
                    <div class="price text-primary"><small>R$</small> 599</div>
                    <p class="subtitle">Para quem quer ser referência</p>
                </div>
                <!-- Features removed for homepage as requested -->
                <div class="action-btn">
                    <Button
                        href="/pedido?plan=completa"
                        variant="primary"
                        class="w-full btn-glow">QUERO ESTE PLANO</Button
                    >
                </div>
            </Card>

            <!-- Plan 3 -->
            <Card variant="price" class="plan-regular plan-card-anim">
                <div class="price-header">
                    <h3>Página Premium</h3>
                    <div class="price"><small>R$</small> 947</div>
                    <p class="subtitle">Solução Definitiva</p>
                </div>
                <!-- Features removed for homepage as requested -->
                <div class="action-btn">
                    <Button
                        href="/pedido?plan=premium"
                        variant="outline"
                        class="w-full">COMEÇAR AGORA</Button
                    >
                </div>
            </Card>
        </div>
        <div class="pricing-footer fade-up-plans delay-2">
            <p>* Pagamento único. Sem mensalidades surpresa.</p>
            <p class="maintenance-note">
                Manutenção opcional disponível por R$ 100/mês.
            </p>
        </div>
        <div class="compare-cta fade-up-plans delay-3">
            <Button href="/planos" variant="outline" class="btn-large"
                >Ver Comparativo Detalhado <span class="arrow">→</span></Button
            >
        </div>
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const section = document.getElementById("plans");

    if (section) {
        const header = section.querySelector(".section-header");
        const grid = section.querySelector(".pricing-grid");

        gsap.fromTo(
            section.querySelectorAll(".fade-up-plans"),
            { opacity: 0, y: 40 },
            {
                opacity: 1,
                y: 0,
                duration: 0.8,
                stagger: 0.2,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: header,
                    start: "top 90%",
                },
            },
        );

        gsap.fromTo(
            section.querySelectorAll(".plan-card-anim"),
            { opacity: 0, y: 60 },
            {
                opacity: 1,
                y: 0,
                duration: 0.8,
                stagger: 0.2,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: grid,
                    start: "top 85%",
                },
            },
        );
    }
</script>

<style>
    #plans {
        padding: 120px 0;
        position: relative;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-desc {
        max-width: 600px;
        margin: 1rem auto;
        color: var(--color-text-container);
    }

    .section-header h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .section-header p {
        font-size: 1.1rem;
        color: var(--color-text-light);
    }

    .pricing-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        align-items: flex-start;
        position: relative;
        z-index: 2;
        justify-content: center; /* Ensure centered if single item */
    }

    /* Global targeting for Card component root elements */
    /* Global targeting for Card component root elements */
    #plans :global(.price-card) {
        padding: 2.5rem 2rem !important; /* More spacious padding */
        display: flex;
        flex-direction: column;
        height: auto;
        box-sizing: border-box;
        border-radius: 20px !important;
        background: #0f0f0f; /* Solid dark background */
        border: 1px solid rgba(255, 255, 255, 0.08); /* Subtle border */
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5); /* Deep shadow */
        transition:
            transform 0.3s ease,
            border-color 0.3s ease;
    }

    #plans :global(.price-card:hover) {
        transform: translateY(-5px);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .price-header {
        margin-bottom: 30px;
        text-align: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 25px;
    }

    .price-header h3 {
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: 2px; /* Premium letter spacing */
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 20px;
        font-weight: 600;
    }

    .price {
        font-size: 4rem; /* Massive, confident price */
        font-weight: 800;
        color: #fff;
        line-height: 1;
        margin-bottom: 15px;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        gap: 8px;
        letter-spacing: -1px;
    }

    .price small {
        font-size: 1.5rem;
        margin-top: 8px;
        color: rgba(255, 255, 255, 0.5);
        font-weight: 400;
    }

    .subtitle {
        font-size: 1rem;
        color: rgba(255, 255, 255, 0.6);
        font-style: normal; /* Cleaner non-italic */
    }

    /* Badge Animation Keyframes */
    @keyframes pulse-gold {
        0% {
            transform: translateX(-50%) scale(1);
            box-shadow: 0 0 0 0 rgba(255, 215, 0, 0.7);
        }
        70% {
            transform: translateX(-50%) scale(1.05);
            box-shadow: 0 0 0 10px rgba(255, 215, 0, 0);
        }
        100% {
            transform: translateX(-50%) scale(1);
            box-shadow: 0 0 0 0 rgba(255, 215, 0, 0);
        }
    }

    .badge-gold {
        position: absolute;
        top: -16px;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(
            135deg,
            #8e6e34,
            #c6a257,
            #8e6e34
        ); /* "Dourado Black" */
        background-size: 200% 200%;
        color: #000;
        padding: 6px 20px;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 1.2px;
        box-shadow:
            0 5px 15px rgba(0, 0, 0, 0.3),
            inset 0 0 0 1px rgba(255, 255, 255, 0.4);
        z-index: 100; /* Ensure it is firmly in front */
        white-space: nowrap;
        animation: pulse-gold 3s infinite ease-in-out;
        border: 1px solid #fff;
    }

    /* Featured Card Styling - PRIMARY RED */
    #plans :global(.featured) {
        border: none;
        position: relative;
        transform: scale(1.05); /* Stays larger */
        z-index: 5;
        background: var(--color-primary) !important; /* Solid Site Red */
        color: #ffffff !important;
        box-shadow: 0 20px 50px rgba(138, 28, 38, 0.5); /* Glowing red shadow */
        overflow: visible !important;
    }

    /* Force all text inside featured to be white */
    #plans :global(.featured h3),
    #plans :global(.featured p),
    #plans :global(.featured .price),
    #plans :global(.featured small),
    #plans :global(.featured li),
    #plans :global(.featured span),
    #plans :global(.featured .check) {
        color: #ffffff !important;
    }

    #plans :global(.featured .price-header) {
        border-bottom-color: rgba(255, 255, 255, 0.3) !important;
    }

    /* Remove the gold/border after effect since we are solid background now if desired, 
       or keep it as a subtle effect. Let's remove the simulated border for clean look */
    #plans :global(.featured::after) {
        display: none;
    }

    .action-btn {
        margin-top: 3rem; /* Increased from 2rem */
        padding-bottom: 0.5rem;
        display: flex;
        justify-content: center; /* Flex centering */
        width: 100%;
    }

    .w-full {
        width: 100% !important; /* Force full width */
        min-width: 0;
        padding-left: 1.5rem;
        padding-right: 1.5rem;
        font-weight: 700; /* Bold CTA */
        text-transform: uppercase;
        font-size: 0.95rem;
        letter-spacing: 0.5px;
    }

    /* Featured button specific style if needed to contrast with red background */
    #plans :global(.featured .btn-primary) {
        background: #0a0a0a !important; /* Dark/Black background */
        color: #ffffff !important; /* White text */
        border: 1px solid rgba(255, 255, 255, 0.2) !important;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2) !important;
    }
    #plans :global(.featured .btn-primary:hover) {
        background: #000000 !important;
        transform: translateY(-2px);
        border-color: #ffffff !important;
    }

    .btn-glow {
        box-shadow: 0 0 20px rgba(214, 40, 57, 0.4);
    }

    .pricing-footer {
        text-align: center !important;
        margin: 40px auto 0;
        max-width: 800px;
        color: var(--color-text-light);
        font-size: 0.9rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5px;
    }

    .compare-cta {
        text-align: center;
        margin-top: 30px;
    }

    .btn-large {
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
        border: 1px solid var(--color-primary);
        transition: all 0.3s ease;
    }

    .btn-large:hover {
        background-color: var(--color-primary);
        color: white;
        box-shadow: 0 0 25px rgba(214, 40, 57, 0.4);
    }

    .arrow {
        display: inline-block;
        transition: transform 0.3s;
        margin-left: 8px;
    }

    /* Responsive */
    @media (max-width: 768px) {
        #plans :global(.price-card) {
            padding: 2rem 1.5rem 3rem 1.5rem !important;
        }
        .price {
            font-size: 3rem;
        }
    }
</style>
