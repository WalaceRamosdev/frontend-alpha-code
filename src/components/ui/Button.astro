---
interface Props {
  href?: string;
  variant?: 'primary' | 'outline' | 'secondary';
  size?: 'md' | 'lg';
  class?: string;
  [key: string]: any;
}

const { href, variant = 'primary', size = 'md', class: className, ...props } = Astro.props;
const Component = href ? 'a' : 'button';
---

<Component 
  href={href} 
  class:list={['btn', `btn-${variant}`, size === 'lg' ? 'lg' : '', className]} 
  {...props}
>
  <slot />
</Component>
