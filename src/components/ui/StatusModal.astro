---
interface Props {
    id: string;
    title: string;
    message: string;
    type?: "success" | "error" | "loading";
}

const { id, title, message, type = "success" } = Astro.props;
---

<div id={id} class="status-modal-overlay hidden">
    <div class="status-modal-content">
        <div class="modal-glow"></div>
        <div class="modal-inner">
            <div class="modal-logo">
                <img src="/assets/logo.svg" alt="Alpha Code" />
            </div>

            <div class={`status-icon-wrapper ${type}`}>
                {
                    type === "success" && (
                        <div class="icon-circle success">
                            <svg
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="3"
                            >
                                <polyline points="20 6 9 17 4 12" />
                            </svg>
                        </div>
                    )
                }
                {
                    type === "error" && (
                        <div class="icon-circle error">
                            <svg
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="3"
                            >
                                <line x1="18" y1="6" x2="6" y2="18" />
                                <line x1="6" y1="6" x2="18" y2="18" />
                            </svg>
                        </div>
                    )
                }
                {
                    type === "loading" && (
                        <div class="loading-container">
                            <div class="loading-text">
                                C A R R E G A N D O . . .
                            </div>
                            <div class="alpha-progress-track">
                                <div class="alpha-progress-bar">
                                    <div class="bar-head" />
                                </div>
                            </div>
                        </div>
                    )
                }
            </div>

            <h2 class="modal-title">{title}</h2>
            <p class="modal-message">{message}</p>
        </div>
    </div>
</div>

<style is:global>
    .status-modal-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.95);
        backdrop-filter: blur(15px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10000;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .status-modal-overlay.active {
        opacity: 1;
    }

    .status-modal-overlay.hidden {
        display: none;
    }

    .status-modal-content {
        position: relative;
        width: 90%;
        max-width: 450px;
        background: #050505;
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 24px;
        padding: 4rem 2rem;
        text-align: center;
        box-shadow: 0 0 100px rgba(0, 0, 0, 0.8);
        /* overflow: hidden; Removed to ensure glows are visible */
        transform: scale(0.95);
        transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .status-modal-overlay.active .status-modal-content {
        transform: scale(1);
    }

    .modal-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle,
            rgba(16, 185, 129, 0.05) 0%,
            transparent 70%
        );
        pointer-events: none;
        opacity: 0;
        transition: opacity 0.5s;
    }

    .status-icon-wrapper.success ~ .modal-glow {
        background: radial-gradient(
            circle,
            rgba(16, 185, 129, 0.15) 0%,
            transparent 70%
        );
        opacity: 1;
    }

    .status-icon-wrapper.error ~ .modal-glow {
        background: radial-gradient(
            circle,
            rgba(239, 68, 68, 0.15) 0%,
            transparent 70%
        );
        opacity: 1;
    }

    .modal-inner {
        position: relative;
        z-index: 2;
    }

    .modal-logo {
        margin-bottom: 2.5rem;
        display: flex;
        justify-content: center;
        opacity: 0.8;
    }

    .modal-logo img {
        width: 50px;
        height: 50px;
    }

    .status-icon-wrapper {
        margin-bottom: 2rem;
        display: flex;
        justify-content: center;
        min-height: 80px;
        align-items: center;
        flex-direction: column;
    }

    /* Loading Animation */
    .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        width: 100%;
        max-width: 280px;
    }

    .loading-text {
        color: #10b981;
        font-family: monospace;
        letter-spacing: 0.3em;
        font-size: 0.9rem;
        font-weight: 700;
        text-shadow: 0 0 10px rgba(16, 185, 129, 0.5);
        animation: pulseText 1.5s infinite alternate;
        margin-bottom: 0.5rem;
    }

    /* Alpha Custom Progress Bar */
    .alpha-progress-track {
        width: 100%;
        height: 6px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 4px;
        position: relative;
        overflow: visible;
        box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.8);
    }

    /* Decorative brackets for the bar */
    .alpha-progress-track::before,
    .alpha-progress-track::after {
        content: "";
        position: absolute;
        top: -4px;
        height: 14px;
        width: 2px;
        background: rgba(16, 185, 129, 0.5);
    }

    .alpha-progress-track::before {
        left: -6px;
    }
    .alpha-progress-track::after {
        right: -6px;
    }

    .alpha-progress-bar {
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        background: linear-gradient(90deg, transparent, #10b981);
        width: 0%;
        border-radius: 4px;
        box-shadow: 0 0 15px rgba(16, 185, 129, 0.4);
        animation: alphaLoad 2s infinite cubic-bezier(0.22, 1, 0.36, 1);
    }

    .bar-head {
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 10px;
        background: #fff;
        border-radius: 2px;
        box-shadow:
            0 0 15px #fff,
            0 0 30px #10b981;
    }

    @keyframes alphaLoad {
        0% {
            width: 0%;
            opacity: 0.5;
        }
        50% {
            opacity: 1;
        }
        100% {
            width: 100%;
            opacity: 0;
        }
    }

    @keyframes pulseText {
        from {
            opacity: 0.7;
            text-shadow: 0 0 5px rgba(16, 185, 129, 0.3);
        }
        to {
            opacity: 1;
            text-shadow: 0 0 15px rgba(16, 185, 129, 0.8);
        }
    }

    /* Success & Error Icons */
    .icon-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .icon-circle::after {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: 50%;
        opacity: 0.5;
        z-index: -1;
    }

    .icon-circle.success {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        border: 2px solid rgba(16, 185, 129, 0.3);
        box-shadow: 0 0 30px rgba(16, 185, 129, 0.2);
        animation: successPop 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .icon-circle.error {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border: 2px solid rgba(239, 68, 68, 0.3);
        box-shadow: 0 0 30px rgba(239, 68, 68, 0.2);
        animation: errorShake 0.4s ease-in-out;
    }

    @keyframes successPop {
        0% {
            transform: scale(0.5);
            opacity: 0;
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    @keyframes errorShake {
        0%,
        100% {
            transform: translateX(0);
        }
        25% {
            transform: translateX(-5px);
        }
        75% {
            transform: translateX(5px);
        }
    }

    .icon-circle svg {
        width: 40px;
        height: 40px;
        stroke-linecap: round;
        stroke-linejoin: round;
    }

    .modal-title {
        font-family: "Outfit", sans-serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.75rem;
    }

    .modal-message {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1rem;
        line-height: 1.5;
    }
</style>

<script is:inline define:vars={{ id }}>
    window.showModal = (title, message, type = "success") => {
        const modal = document.getElementById(id);
        if (!modal) return;

        const titleEl = modal.querySelector(".modal-title");
        const messageEl = modal.querySelector(".modal-message");
        const iconWrapper = modal.querySelector(".status-icon-wrapper");

        if (titleEl) titleEl.textContent = title;
        if (messageEl) messageEl.textContent = message;

        // Update Icon
        if (iconWrapper) {
            iconWrapper.className = `status-icon-wrapper ${type}`;
            let iconHtml = "";
            if (type === "success") {
                iconHtml = `
                    <div class="icon-circle success">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                    </div>`;
            } else if (type === "error") {
                iconHtml = `
                    <div class="icon-circle error">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                            <line x1="18" y1="6" x2="6" y2="18"></line>
                            <line x1="6" y1="6" x2="18" y2="18"></line>
                        </svg>
                    </div>`;
            } else {
                iconHtml = `
                    <div class="loading-container">
                        <div class="loading-text">C A R R E G A N D O . . .</div>
                        <div class="alpha-progress-track">
                            <div class="alpha-progress-bar">
                                <div class="bar-head"></div>
                            </div>
                        </div>
                    </div>`;
            }
            iconWrapper.innerHTML = iconHtml;
        }

        modal.classList.remove("hidden");
        // Force reflow
        void modal.offsetWidth;
        setTimeout(() => modal.classList.add("active"), 10);
    };

    window.hideModal = () => {
        const modal = document.getElementById(id);
        if (!modal) return;
        modal.classList.remove("active");
        setTimeout(() => modal.classList.add("hidden"), 300);
    };
</script>
