---
interface Props {
    id: string;
    title: string;
    message: string;
    type?: "success" | "error" | "loading";
}

const { id, title, message, type = "success" } = Astro.props;
---

<div id={id} class="status-modal-overlay hidden">
    <div class="status-modal-content">
        <div class="modal-glow"></div>
        <div class="modal-inner">
            <div class="modal-logo">
                <img src="/assets/logo.svg" alt="Alpha Code" />
            </div>

            <div class={`status-icon-wrapper ${type}`}>
                {
                    type === "success" && (
                        <div class="icon-circle success">
                            <svg
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="3"
                            >
                                <polyline points="20 6 9 17 4 12" />
                            </svg>
                        </div>
                    )
                }
                {
                    type === "error" && (
                        <div class="icon-circle error">
                            <svg
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="3"
                            >
                                <line x1="18" y1="6" x2="6" y2="18" />
                                <line x1="6" y1="6" x2="18" y2="18" />
                            </svg>
                        </div>
                    )
                }
                {
                    type === "loading" && (
                        <div class="icon-circle loading">
                            <div class="loader-spinner" />
                        </div>
                    )
                }
            </div>

            <h2 class="modal-title">{title}</h2>
            <p class="modal-message">{message}</p>
        </div>
    </div>
</div>

<style>
    .status-modal-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.85);
        backdrop-filter: blur(10px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10000;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .status-modal-overlay.active {
        opacity: 1;
    }

    .status-modal-overlay.hidden {
        display: none;
    }

    .status-modal-content {
        position: relative;
        width: 90%;
        max-width: 400px;
        background: #0a0a0a;
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 32px;
        padding: 3rem 2rem;
        text-align: center;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        overflow: hidden;
        transform: translateY(20px);
        transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .status-modal-overlay.active .status-modal-content {
        transform: translateY(0);
    }

    .modal-glow {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(
            circle at center,
            rgba(138, 28, 38, 0.1) 0%,
            transparent 70%
        );
        pointer-events: none;
    }

    .modal-inner {
        position: relative;
        z-index: 2;
    }

    .modal-logo {
        margin-bottom: 2rem;
        display: flex;
        justify-content: center;
    }

    .modal-logo img {
        width: 40px;
        height: 40px;
        filter: drop-shadow(0 0 10px rgba(138, 28, 38, 0.3));
    }

    .status-icon-wrapper {
        margin-bottom: 1.5rem;
        display: flex;
        justify-content: center;
    }

    .icon-circle {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .icon-circle.success {
        background: rgba(52, 211, 153, 0.1);
        color: #34d399;
        border: 1px solid rgba(52, 211, 153, 0.2);
    }

    .icon-circle.error {
        background: rgba(248, 113, 113, 0.1);
        color: #f87171;
        border: 1px solid rgba(248, 113, 113, 0.2);
    }

    .icon-circle.loading {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .icon-circle svg {
        width: 32px;
        height: 32px;
    }

    .loader-spinner {
        width: 28px;
        height: 28px;
        border: 3px solid rgba(255, 255, 255, 0.1);
        border-top-color: var(--color-primary, #8a1c26);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .modal-title {
        font-family: "Outfit", sans-serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.75rem;
    }

    .modal-message {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1rem;
        line-height: 1.5;
    }
</style>

<script is:inline define:vars={{ id }}>
    window.showModal = (title, message, type = "success") => {
        const modal = document.getElementById(id);
        if (!modal) return;

        const titleEl = modal.querySelector(".modal-title");
        const messageEl = modal.querySelector(".modal-message");
        const iconWrapper = modal.querySelector(".status-icon-wrapper");

        if (titleEl) titleEl.textContent = title;
        if (messageEl) messageEl.textContent = message;

        // Update Icon
        if (iconWrapper) {
            iconWrapper.className = `status-icon-wrapper ${type}`;
            let iconHtml = "";
            if (type === "success") {
                iconHtml = `<div class="icon-circle success"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><polyline points="20 6 9 17 4 12"></polyline></svg></div>`;
            } else if (type === "error") {
                iconHtml = `<div class="icon-circle error"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></div>`;
            } else {
                iconHtml = `<div class="icon-circle loading"><div class="loader-spinner"></div></div>`;
            }
            iconWrapper.innerHTML = iconHtml;
        }

        modal.classList.remove("hidden");
        setTimeout(() => modal.classList.add("active"), 10);
    };

    window.hideModal = () => {
        const modal = document.getElementById(id);
        if (!modal) return;
        modal.classList.remove("active");
        setTimeout(() => modal.classList.add("hidden"), 300);
    };
</script>
