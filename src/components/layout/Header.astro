---
// import { getSession } from "auth-astro/server";
// import authConfig from "../../auth.config";
import { getSession } from "../../lib/auth";

const { request } = Astro;
let session = null;

try {
    session = await getSession(request);
} catch (error) {
    // Log the error but don't crash the header
    console.error(
        "[Header] Auth error:",
        error instanceof Error ? error.message : String(error),
    );
}

const currentPath = Astro.url.pathname;
const isDashboard = currentPath === "/dashboard" || currentPath === "/perfil";
---

<header id="main-header">
    <div class="container header-container">
        <a href="/" class="logo-link">
            <!-- Fixed White Logo for Dark Theme -->
            <img
                src="/assets/logoText.svg"
                alt="Alpha Code Logo"
                class="nav-logo"
                width="150"
                height="50"
            />
        </a>
        <nav class="desktop-nav">
            <ul>
                <li><a href="/#services">Serviços</a></li>
                <li><a href="/#projects">Projetos</a></li>
                <li><a href="/#testimonials">Depoimentos</a></li>
                <li><a href="/planos">Planos</a></li>
                <li><a href="/pedido?plan=manutencao">Manutenção</a></li>
                <li><a href="/about">Sobre</a></li>
            </ul>
        </nav>
        <div class="header-actions">
            {
                session ? (
                    <a
                        href="/dashboard"
                        class={`profile-nav-btn desktop-only ${isDashboard ? "active-dash active" : ""}`}
                        id="desktop-profile-btn"
                    >
                        <span class="profile-text-node">Perfil</span>
                        <div class="profile-avatar-node">
                            {session.user?.image ? (
                                <img src={session.user.image} alt="Avatar" />
                            ) : (
                                <div class="avatar-letter">
                                    {session.user?.name?.charAt(0) || "U"}
                                </div>
                            )}
                        </div>
                    </a>
                ) : (
                    <a href="/login" class="btn-login-nav desktop-only">
                        Login
                    </a>
                )
            }
            {
                session ? (
                    <a
                        href="/dashboard"
                        class={`profile-nav-btn mobile-login ${isDashboard ? "active-dash active" : ""}`}
                        id="mobile-profile-btn"
                    >
                        <span class="profile-text-node">Perfil</span>
                        <div class="profile-avatar-node">
                            {session.user?.image ? (
                                <img src={session.user.image} alt="Avatar" />
                            ) : (
                                <div class="avatar-letter">
                                    {session.user?.name?.charAt(0) || "U"}
                                </div>
                            )}
                        </div>
                    </a>
                ) : (
                    <a href="/login" class="btn-login-nav mobile-login">
                        Login
                    </a>
                )
            }
            <!-- Mobile Menu Toggle Only -->
            <button id="mobile-menu-btn" aria-label="Menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <a
                href="https://wa.me/5521999064502"
                target="_blank"
                class="btn btn-primary desktop-only"
                style="padding: 0.5rem 1.5rem; font-size: 0.8rem; height: 44px; display: flex; align-items: center;"
            >
                Contato
            </a>
        </div>
    </div>
    <!-- Mobile Menu -->
    <div class="mobile-menu">
        <ul>
            <li><a href="/#services">Serviços</a></li>
            <li><a href="/#projects">Projetos</a></li>
            <li><a href="/#testimonials">Depoimentos</a></li>
            <li><a href="/planos">Planos</a></li>
            <li><a href="/pedido?plan=manutencao">Manutenção</a></li>
            <li><a href="/about">Sobre</a></li>
            {
                session ? (
                    <li>
                        <a href="/dashboard">Dashboard</a>
                    </li>
                ) : (
                    <li>
                        <a href="/login">Login</a>
                    </li>
                )
            }
            <li>
                <a href="https://wa.me/5521999064502" class="btn btn-primary"
                    >Falar no WhatsApp</a
                >
            </li>
        </ul>
    </div>
</header>
<script>
    // Mobile Menu Logic
    const mobileMenuBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.querySelector(".mobile-menu");
    const mobileLinks = document.querySelectorAll(".mobile-menu a");
    if (mobileMenuBtn && mobileMenu) {
        mobileMenuBtn.addEventListener("click", () => {
            const isOpen = mobileMenu.classList.contains("open");
            if (isOpen) {
                mobileMenu.classList.remove("open");
                mobileMenuBtn.classList.remove("active");
                document.body.style.overflow = "";
            } else {
                mobileMenu.classList.add("open");
                mobileMenuBtn.classList.add("active");
                document.body.style.overflow = "hidden";
            }
        });
        mobileLinks.forEach((link) => {
            link.addEventListener("click", () => {
                mobileMenu.classList.remove("open");
                mobileMenuBtn.classList.remove("active");
                document.body.style.overflow = "";
            });
        });
        document.addEventListener("click", (e) => {
            const target = e.target as Node;
            if (
                !mobileMenu.contains(target) &&
                !mobileMenuBtn.contains(target) &&
                mobileMenu.classList.contains("open")
            ) {
                mobileMenu.classList.remove("open");
                mobileMenuBtn.classList.remove("active");
                document.body.style.overflow = "";
            }
        });
    }
    // Profile Button Animation Logic
    const profileBtns = document.querySelectorAll(".profile-nav-btn");
    profileBtns.forEach((btn) => {
        btn.addEventListener("click", (e) => {
            const link = btn.getAttribute("href");
            if (link) {
                e.preventDefault();
                btn.classList.add("expanded");
                setTimeout(() => {
                    window.location.href = link;
                }, 400); // Wait for animation
            }
        });
    });
</script>
<style>
    /* Header Styles */
    #main-header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background-color: rgba(2, 2, 2, 0.85); /* Dark glass */
        backdrop-filter: blur(24px);
        -webkit-backdrop-filter: blur(24px);
        z-index: 1000;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05); /* Subtle border */
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
        padding: 15px 0;
        transition: all var(--transition-speed);
    }
    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .logo-link {
        text-decoration: none;
        display: flex;
        align-items: center;
        transition: opacity var(--transition-speed);
    }
    .logo-link:hover {
        opacity: 0.8;
        filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.2));
    }
    .nav-logo {
        height: 50px;
        width: auto;
        display: block;
    } /* Nav */
    .desktop-nav ul {
        display: flex;
        gap: 12px;
        align-items: center;
    }
    .desktop-nav a {
        position: relative;
        font-weight: 500;
        font-size: 0.95rem;
        padding: 10px 20px;
        border-radius: 30px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        color: var(--color-text-secondary); /* Softer white */
    }
    .desktop-nav a:hover {
        background-color: rgba(255, 255, 255, 0.05);
        color: white;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.05);
    } /* Active/Primary Link if needed */
    .desktop-nav a.active {
        color: white;
    }
    .btn-login-nav {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2) !important;
        padding: 8px 20px !important;
        border-radius: 20px !important;
        margin-left: 0;
        transition: all 0.3s ease;
    }
    .btn-login-nav:hover {
        background-color: var(--color-primary) !important;
        border-color: var(--color-primary) !important;
        color: white !important;
        box-shadow: 0 4px 12px rgba(138, 28, 38, 0.3);
    }

    /* New Profile Button Styles */
    .profile-nav-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 50px;
        text-decoration: none;
        width: 44px;
        height: 44px;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.2);
        white-space: nowrap;
        cursor: pointer;
        position: relative;
    }

    /* Keep it permanently expanded on Dashboard or when clicked */
    .profile-nav-btn.active-dash,
    .profile-nav-btn.expanded {
        width: 135px;
        justify-content: space-between;
        padding: 0 4px 0 18px;
        background: var(--color-primary);
        border-color: var(--color-primary);
        box-shadow: 0 0 25px rgba(138, 28, 38, 0.5);
    }

    .profile-avatar-node {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        z-index: 2;
        /* Absolute centering support for the initial state */
        transition: transform 0.4s ease;
    }

    .profile-avatar-node img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .avatar-letter {
        color: white;
        font-weight: 800;
        font-size: 1rem;
        line-height: 1;
    }

    .profile-text-node {
        max-width: 0;
        opacity: 0;
        transform: translateX(10px);
        transition: all 0.3s ease;
        color: white;
        font-weight: 700;
        font-size: 0.95rem;
        pointer-events: none;
        visibility: hidden;
    }

    .profile-nav-btn.active-dash .profile-text-node,
    .profile-nav-btn.expanded .profile-text-node {
        max-width: 100px;
        opacity: 1;
        transform: translateX(0);
        visibility: visible;
        margin-right: 10px;
    }
    .header-actions {
        display: flex;
        align-items: center;
        gap: 12px;
    } /* Mobile Menu */
    #mobile-menu-btn {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        flex-direction: column;
        gap: 6px;
        width: 32px;
    }
    #mobile-menu-btn span {
        display: block;
        width: 100%;
        height: 2px;
        background-color: white;
        transition: 0.3s;
        border-radius: 2px;
    }
    #mobile-menu-btn:hover span {
        background-color: var(--color-primary-light);
        box-shadow: 0 0 10px var(--color-primary);
    } /* Hamburger transformation */
    #mobile-menu-btn.active span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 6px);
    }
    #mobile-menu-btn.active span:nth-child(2) {
        opacity: 0;
    }
    #mobile-menu-btn.active span:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -6px);
    }
    .mobile-menu {
        position: fixed;
        top: 80px;
        left: 0;
        width: 100%;
        background-color: rgba(10, 10, 10, 0.95);
        padding: 30px;
        border-bottom: 1px solid var(--color-primary);
        transform: translateY(-150%);
        transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        z-index: 999;
        text-align: center;
        backdrop-filter: blur(15px);
    }
    .mobile-menu.open {
        transform: translateY(0);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    }
    .mobile-menu ul {
        display: flex;
        flex-direction: column;
        gap: 15px;
        align-items: center;
    }
    .mobile-menu a {
        color: white;
        font-size: 1.1rem;
        font-weight: 500;
    }
    .mobile-menu .btn {
        width: auto;
        min-width: 200px;
        margin: 10px auto 0;
    }
    .desktop-only {
        display: inline-block;
    }
    .mobile-login {
        display: none;
    }
    @media (max-width: 768px) {
        .desktop-nav {
            display: none;
        }
        #mobile-menu-btn {
            display: flex;
        }
        .desktop-only {
            display: none;
        }
        .mobile-login {
            display: inline-block;
        }
    }
</style>
