---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';

const title = "Planos e Preços | Alpha Code";
const description = "Confira os detalhes completos dos nossos planos de criação de sites.";
---

<BaseLayout title={title} description={description} canonicalUrl={`${Astro.site}planos`}>
    <section class="plans-hero">
        <div class="container text-center">
            <h1 class="fade-up">Compare Nossos Planos</h1>
            <p class="fade-up delay-1">Escolha a estrutura ideal para o seu crescimento.</p>
        </div>
    </section>

    <section class="container" style="padding-bottom: 80px;">
        <div class="detailed-plans-grid">
            
            <!-- PLAN 1 -->
            <details class="detailed-plan-card fade-up">
                <summary class="plan-summary">
                    <div class="summary-header">
                        <h2>LANDING PAGE SIMPLES</h2>
                        <p class="plan-objective">Para quem precisa existar online e converter o básico.</p>
                        <span class="toggle-text">Ver detalhes costumizáveis +</span>
                    </div>
                    <div class="plan-price-block-summary">
                        <span class="plan-price">R$ 247</span>
                    </div>
                </summary>
                
                <div class="plan-details-content">
                    <div class="spec-group">
                        <h3>Objetivo Principal</h3>
                        <p>Apresentação clara + 1 ação principal (contato ou venda).</p>
                    </div>

                    <div class="spec-group">
                        <h3>Estrutura</h3>
                        <ul class="spec-list">
                            <li>Hero section (headline + CTA)</li>
                            <li>Sobre o serviço/profissional</li>
                            <li>Benefícios principais</li>
                            <li>CTA final</li>
                        </ul>
                    </div>

                    <div class="spec-group">
                        <h3>Tecnologia</h3>
                        <ul class="spec-list">
                            <li>HTML, CSS e JavaScript puro</li>
                        </ul>
                    </div>
                    
                    <div class="action-area">
                         <div style="height: 50px; display: flex; align-items: center; justify-content: center;">
                            <Button href="/pedido?plan=simples" variant="outline" class="w-full">Selecionar</Button>
                         </div>
                    </div>
                </div>
            </details>

            <!-- PLAN 2 -->
            <details class="detailed-plan-card featured fade-up delay-1" open>
                <summary class="plan-summary">
                    <div class="badge">Populares</div>
                    <div class="summary-header">
                        <h2>PÁGINA COMPLETA</h2>
                        <p class="plan-objective">Para quem quer autoridade e presença profissional real.</p>
                        <span class="toggle-text">Ver detalhes completos +</span>
                    </div>
                    <div class="plan-price-block-summary">
                        <span class="plan-price">R$ 399</span>
                    </div>
                </summary>
                
                <div class="plan-details-content">
                    <div class="spec-group">
                        <h3>Objetivo Principal</h3>
                        <p>Informar, convencer e organizar o contato com o cliente.</p>
                    </div>

                    <div class="spec-group">
                        <h3>Estrutura</h3>
                        <ul class="spec-list">
                            <li>Home, Sobre, Serviços, Depoimentos, Contato</li>
                        </ul>
                    </div>

                    <div class="spec-group">
                        <h3>Funcionalidades</h3>
                        <ul class="spec-list">
                            <li>Botão WhatsApp Flutuante</li>
                            <li>Modo Claro/Escuro</li>
                            <li>SEO Intermediário</li>
                        </ul>
                    </div>
                    
                    <div class="action-area">
                         <div style="height: 50px; display: flex; align-items: center; justify-content: center;">
                             <Button href="/pedido?plan=completa" variant="primary" class="w-full">Selecionar</Button>
                         </div>
                    </div>
                </div>
            </details>

            <!-- PLAN 3 -->
            <details class="detailed-plan-card fade-up delay-2">
                <summary class="plan-summary">
                    <div class="summary-header">
                        <h2>PÁGINA PREMIUM</h2>
                        <p class="plan-objective">Para quem quer escalar e parecer grande.</p>
                        <span class="toggle-text">Ver detalhes completos +</span>
                    </div>
                    <div class="plan-price-block-summary">
                        <span class="plan-price">R$ 647</span>
                    </div>
                </summary>
                
                <div class="plan-details-content">
                    <div class="spec-group">
                        <h3>Objetivo Principal</h3>
                        <p>Vender, atender, organizar e reter clientes.</p>
                    </div>

                    <div class="spec-group">
                        <h3>Diferencial</h3>
                        <ul class="spec-list">
                            <li>Área restrita/Dashboard</li>
                            <li>Sistema de agendamento</li>
                            <li>SEO Avançado</li>
                        </ul>
                    </div>
                    
                    <div class="action-area">
                         <div style="height: 50px; display: flex; align-items: center; justify-content: center;">
                            <Button href="/pedido?plan=premium" variant="outline" class="w-full">Selecionar</Button>
                         </div>
                    </div>
                </div>
            </details>

        </div>
    </section>
</BaseLayout>

<style>
.plans-hero { padding: 80px 0; }
.detailed-plans-grid { display: grid; gap: 30px; margin-top: 40px; }
.detailed-plan-card {
    background: var(--color-bg-surface);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    padding: 20px;
    transition: all 0.3s;
}
.detailed-plan-card[open] {
    box-shadow: var(--shadow-medium);
}
.detailed-plan-card.featured {
    border: 2px solid var(--color-primary);
    animation: borderPulse 2s infinite ease-in-out;
}

@keyframes borderPulse {
    0% {
        box-shadow: 0 0 0 0 rgba(110, 15, 24, 0.4);
        transform: scale(1);
    }
    50% {
        box-shadow: 0 0 15px 0 rgba(110, 15, 24, 0.6);
        transform: scale(1.02);
    }
    100% {
        box-shadow: 0 0 0 0 rgba(110, 15, 24, 0.4);
        transform: scale(1);
    }
}
summary {
    list-style: none;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
}
summary::-webkit-details-marker { display: none; }
.summary-header h2 { font-size: 1.2rem; margin: 0; }
.plan-price { font-size: 1.5rem; font-weight: bold; color: var(--color-primary); }
.plan-details-content { margin-top: 20px; padding-top: 20px; border-top: 1px solid var(--border-color); }
.spec-group { margin-bottom: 20px; }
.spec-group h3 { font-size: 1rem; color: var(--color-text-light); margin-bottom: 10px; }
.spec-list { list-style: disc; padding-left: 20px; }
.badge {
    position: absolute;
    top: -30px;
    right: 0;
    background: var(--color-primary);
    color: white;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: bold;
}
.w-full { width: 100%; }
</style>
