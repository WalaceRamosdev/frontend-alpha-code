---
import Button from '../ui/Button.astro';
import Card from '../ui/Card.astro';
---

<section id="plans" class="bg-alt">
    <div class="container">
        <div class="section-header">
            <h2>Investimento Inteligente</h2>
            <p>Escolha o plano ideal para escalar seu faturamento.</p>
        </div>
        
        <div class="pricing-grid">
            <!-- Plan 1 -->
            <Card variant="price" class="plan-regular">
                <div class="price-header">
                    <h3>Página Simples</h3>
                    <div class="price"><small>R$</small> 247</div>
                    <p class="subtitle">Entrada Essencial</p>
                </div>
                <ul class="features">
                    <li><span class="check">✓</span> Landing Page Única</li>
                    <li><span class="check">✓</span> Design Otimizado</li>
                    <li><span class="check">✓</span> 1 Seção de Conversão</li>
                    <li><span class="check">✓</span> Botão WhatsApp</li>
                </ul>
                <div class="action-btn">
                    <Button href="/pedido?plan=simples" variant="outline" class="w-full">Selecionar</Button>
                </div>
            </Card>

            <!-- Plan 2 (Featured) -->
            <Card variant="price" class="featured">
                <div class="badge-gold">Mais Vendido</div>
                <div class="price-header">
                    <h3>Página Completa</h3>
                    <div class="price text-primary"><small>R$</small> 399</div>
                    <p class="subtitle">Para Profissionais que querem Autoridade</p>
                </div>
                <ul class="features">
                    <li><span class="check">✓</span> <strong>Estrutura Multi-seção</strong></li>
                    <li><span class="check">✓</span> Design Premium Exclusivo</li>
                    <li><span class="check">✓</span> SEO Otimizado (Google)</li>
                    <li><span class="check">✓</span> Copywriting Persuasivo</li>
                    <li><span class="check">✓</span> <strong>Alta Conversão</strong></li>
                </ul>
                <div class="action-btn">
                     <Button href="/pedido?plan=completa" variant="primary" class="w-full btn-glow">Quero este Plano</Button>
                </div>
            </Card>

            <!-- Plan 3 -->
            <Card variant="price" class="plan-regular">
                <div class="price-header">
                    <h3>Página Premium</h3>
                    <div class="price"><small>R$</small> 647</div>
                    <p class="subtitle">Solução Definitiva</p>
                </div>
                <ul class="features">
                    <li><span class="check">✓</span> <strong>Tudo do Completo</strong></li>
                    <li><span class="check">✓</span> Área de Membros / Blog</li>
                    <li><span class="check">✓</span> Chatbot IA Integrado</li>
                    <li><span class="check">✓</span> Gestão de Tráfego (Setup)</li>
                    <li><span class="check">✓</span> Suporte VIP 24h</li>
                </ul>
                <div class="action-btn">
                    <Button href="/pedido?plan=premium" variant="outline" class="w-full">Selecionar</Button>
                </div>
            </Card>
        </div>
        <div class="pricing-footer">
            <p>* Pagamento único. Sem mensalidades surpresa.</p>
            <p class="maintenance-note">Manutenção opcional disponível por R$ 100/mês.</p>
        </div>
        <div class="compare-cta">
            <a href="/planos" class="compare-link">Ver Comparativo Detalhado <span class="arrow">→</span></a>
        </div>
    </div>
</section>

<style>
#plans {
    padding: 120px 0;
    position: relative;
}

.section-header {
    text-align: center;
    margin-bottom: 4rem;
}

.section-header h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.section-header p {
    font-size: 1.1rem;
    color: var(--color-text-light);
}

.pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 30px;
    align-items: center;
    position: relative;
    z-index: 2;
}

.price-header {
    margin-bottom: 30px;
    text-align: center;
}

.price-header h3 {
    font-size: 1.2rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--color-text-light);
    margin-bottom: 15px;
}

.price {
    font-size: 3.5rem;
    font-weight: 800;
    color: var(--color-text-main);
    line-height: 1;
    margin-bottom: 10px;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: 5px;
}

.price small {
    font-size: 1.2rem;
    margin-top: 5px;
    color: var(--color-text-light);
}

.subtitle {
    font-size: 0.95rem;
    color: var(--color-text-light);
    font-style: italic;
}

.features {
    text-align: left;
    margin-bottom: 35px;
    flex-grow: 1;
    padding: 0 10px;
}

.features li {
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 0.95rem;
}

.check {
    color: var(--color-primary);
    font-weight: bold;
    font-size: 1.1rem;
}

.badge-gold {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #CFAA34, #F8E698);
    color: #333;
    padding: 6px 20px;
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 5px 15px rgba(207, 170, 52, 0.4);
    z-index: 10;
}

.featured {
    border: 2px solid transparent;
    background-clip: padding-box;
    position: relative;
    transform: scale(1.05);
    z-index: 5;
    background-color: var(--color-bg-surface);
}

/* Simulated Gradient Border for Featured */
.featured::after {
    content: '';
    position: absolute;
    top: -2px; left: -2px; right: -2px; bottom: -2px;
    background: var(--gradient-primary);
    z-index: -1;
    border-radius: var(--radius-md);
}

[data-theme="dark"] .featured::after {
    background: linear-gradient(135deg, var(--color-primary), var(--color-gold));
}

.action-btn {
    text-align: center;
}

.w-full {
    width: 100%;
}

.btn-glow {
    box-shadow: 0 0 20px rgba(214, 40, 57, 0.4);
}

.pricing-footer {
    text-align: center;
    margin-top: 50px;
    color: var(--color-text-light);
    font-size: 0.9rem;
}

.compare-cta {
    text-align: center;
    margin-top: 20px;
}

.compare-link {
    font-weight: 600;
    color: var(--color-primary);
    display: inline-flex;
    align-items: center;
    gap: 5px;
}

.compare-link:hover .arrow {
    transform: translateX(5px);
}

.arrow {
    transition: transform 0.3s;
}
</style>
