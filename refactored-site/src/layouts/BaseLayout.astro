---
import Footer from '../components/layout/Footer.astro';
import Header from '../components/layout/Header.astro';
import { createSEOMeta } from '../utils/seo';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
  ogImage?: string;
  noIndex?: boolean;
}

const { title, description, canonicalUrl = Astro.url.href, ogImage = '/assets/logo.svg', noIndex = false } = Astro.props;

const seo = createSEOMeta({
  title,
  description,
  canonicalUrl,
  ogImage
});
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <title>{seo.title}</title>
    <meta name="description" content={seo.description} />
    <link rel="canonical" href={seo.canonical} />
    <meta name="keywords" content={seo.keywords} />
    <meta name="author" content="Alpha Code" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={seo['og:title']} />
    <meta property="og:description" content={seo['og:description']} />
    <meta property="og:type" content={seo['og:type']} />
    <meta property="og:url" content={seo['og:url']} />
    <meta property="og:image" content={seo['og:image']} />
    <meta property="og:locale" content={seo['og:locale']} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content={seo['twitter:card']} />
    <meta name="twitter:creator" content={seo['twitter:creator']} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@500;700&display=swap" rel="stylesheet">

    {noIndex && <meta name="robots" content="noindex, nofollow" />}
    {!noIndex && <meta name="robots" content={seo.robots} />}
</head>
<body>
    <a href="#main-content" class="skip-link sr-only focus:not-sr-only">
        Pular para conte√∫do principal
    </a>

    <Header />
    
    <main id="main-content">
        <slot />
    </main>

    <Footer />

    <a href="https://wa.me/5521999064502" target="_blank" class="whatsapp-float" aria-label="Fale conosco">
